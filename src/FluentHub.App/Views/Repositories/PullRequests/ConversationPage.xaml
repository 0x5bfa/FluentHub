            <DataTemplate x:Key="CrossReferencedEventDataTemplate" x:DataType="modelsV4:CrossReferencedEvent">
                <primer:Timeline>
                    <primer:Timeline.Badge>
                        <FontIcon
                            FontFamily="{StaticResource Octicons}"
                            FontSize="14"
                            Glyph="&#xE968;" />
                    </primer:Timeline.Badge>
                    <primer:Timeline.Body>
                        <Grid ColumnSpacing="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <primer:Avatar
                                VerticalAlignment="Top"
                                Label="{x:Bind Actor.Login}"
                                Size="20"
                                Source="{x:Bind Actor.AvatarUrl}" />
                            <StackPanel
                                Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="4">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="{ThemeResource TextFillColorSecondary}"
                                    IsTextSelectionEnabled="True"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="referenced this" />
                                <StackPanel
                                    x:Name="CrossReferencedEventSourceRepoTextBlock"
                                    VerticalAlignment="Center"
                                    x:Load="{x:Bind IsCrossRepository}"
                                    Orientation="Horizontal"
                                    Spacing="4">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="from" />
                                    <StackPanel
                                        x:Name="CrossReferencedEventSourceIssueRepository"
                                        x:Load="{x:Bind Source.Issue, Converter={StaticResource ObjectToBoolConverter}}"
                                        Orientation="Horizontal">
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind Source.Issue.Repository.Owner.Login}" />
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="/" />
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind Source.Issue.Repository.Name}" />
                                    </StackPanel>
                                    <StackPanel
                                        x:Name="CrossReferencedEventSourcePullRequestRepository"
                                        x:Load="{x:Bind Source.PullRequest, Converter={StaticResource ObjectToBoolConverter}}"
                                        Orientation="Horizontal">
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind Source.PullRequest.Repository.Owner.Login}" />
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="/" />
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind Source.PullRequest.Repository.Name}" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondary}"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind CreatedAtHumanized}" />
                            </StackPanel>
                            <Button
                                Grid.Row="1"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Margin="0,4,0,0"
                                Padding="8"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Grid>
                                        <toolkit:SwitchPresenter
                                            x:Name="CrossReferencedEventSourceIssueStateSwitchPresenter"
                                            x:Load="{x:Bind Source.Issue, Converter={StaticResource ObjectToBoolConverter}}"
                                            TargetType="x:String"
                                            Value="{x:Bind Source.Issue.State}">
                                            <toolkit:Case Value="Open">
                                                <Border
                                                    Width="24"
                                                    Height="24"
                                                    Background="{ThemeResource PrimerOpenEmphasis}"
                                                    CornerRadius="4">
                                                    <FontIcon
                                                        FontFamily="{StaticResource Octicons}"
                                                        FontSize="16"
                                                        Glyph="&#xE9BF;" />
                                                </Border>
                                            </toolkit:Case>
                                            <toolkit:Case Value="Closed">
                                                <Grid>
                                                    <toolkit:SwitchPresenter
                                                        x:Name="CrossReferencedEventSourceIssueStateReasonSwitchPresenter"
                                                        x:Load="{x:Bind Source.Issue, Converter={StaticResource ObjectToBoolConverter}}"
                                                        TargetType="x:String"
                                                        Value="{x:Bind Source.Issue.StateReason.ToString()}">
                                                        <toolkit:Case Value="NotPlanned">
                                                            <Border
                                                                Width="24"
                                                                Height="24"
                                                                Background="{ThemeResource PrimerNeutralEmphasis}"
                                                                CornerRadius="4">
                                                                <FontIcon
                                                                    FontFamily="{StaticResource Octicons}"
                                                                    FontSize="16"
                                                                    Glyph="&#xE9E6;" />
                                                            </Border>
                                                        </toolkit:Case>
                                                        <toolkit:Case Value="Completed">
                                                            <Border
                                                                Width="24"
                                                                Height="24"
                                                                Background="{ThemeResource PrimerDoneEmphasis}"
                                                                CornerRadius="4">
                                                                <FontIcon
                                                                    FontFamily="{StaticResource Octicons}"
                                                                    FontSize="16"
                                                                    Glyph="&#xE9E6;" />
                                                            </Border>
                                                        </toolkit:Case>
                                                    </toolkit:SwitchPresenter>
                                                </Grid>
                                            </toolkit:Case>
                                        </toolkit:SwitchPresenter>
                                        <toolkit:SwitchPresenter
                                            x:Name="CrossReferencedEventSourcePullRequestIsDraftSwitchPresenter"
                                            x:Load="{x:Bind Source.PullRequest, Converter={StaticResource ObjectToBoolConverter}}"
                                            TargetType="x:String"
                                            Value="{x:Bind Source.PullRequest.IsDraft}">
                                            <toolkit:Case Value="True">
                                                <Border
                                                    Width="24"
                                                    Height="24"
                                                    Background="{ThemeResource PrimerNeutralEmphasis}"
                                                    CornerRadius="4">
                                                    <FontIcon
                                                        FontFamily="{StaticResource Octicons}"
                                                        FontSize="16"
                                                        Glyph="&#xE9C3;" />
                                                </Border>
                                            </toolkit:Case>
                                            <toolkit:Case Value="False">
                                                <Grid>
                                                    <toolkit:SwitchPresenter
                                                        x:Name="CrossReferencedEventSourcePullRequestStateSwitchPresenter"
                                                        x:Load="{x:Bind Source.PullRequest, Converter={StaticResource ObjectToBoolConverter}}"
                                                        TargetType="x:String"
                                                        Value="{x:Bind Source.PullRequest.State}">
                                                        <toolkit:Case Value="Open">
                                                            <Border
                                                                Width="24"
                                                                Height="24"
                                                                Background="{ThemeResource PrimerOpenEmphasis}"
                                                                CornerRadius="4">
                                                                <FontIcon
                                                                    FontFamily="{StaticResource Octicons}"
                                                                    FontSize="16"
                                                                    Glyph="&#xE9BF;" />
                                                            </Border>
                                                        </toolkit:Case>
                                                        <toolkit:Case Value="Closed">
                                                            <Border
                                                                Width="24"
                                                                Height="24"
                                                                Background="{ThemeResource PrimerDangerEmphasis}"
                                                                CornerRadius="4">
                                                                <FontIcon
                                                                    FontFamily="{StaticResource Octicons}"
                                                                    FontSize="16"
                                                                    Glyph="&#xE9C1;" />
                                                            </Border>
                                                        </toolkit:Case>
                                                        <toolkit:Case Value="Merged">
                                                            <Border
                                                                Width="24"
                                                                Height="24"
                                                                Background="{ThemeResource PrimerDoneEmphasis}"
                                                                CornerRadius="4">
                                                                <FontIcon
                                                                    FontFamily="{StaticResource Octicons}"
                                                                    FontSize="16"
                                                                    Glyph="&#xE9BD;" />
                                                            </Border>
                                                        </toolkit:Case>
                                                    </toolkit:SwitchPresenter>
                                                </Grid>
                                            </toolkit:Case>
                                        </toolkit:SwitchPresenter>
                                    </Grid>
                                    <TextBlock
                                        x:Name="CrossReferencedEventSourceIssueTitleTextBlock"
                                        VerticalAlignment="Center"
                                        x:Load="{x:Bind Source.Issue, Converter={StaticResource ObjectToBoolConverter}}"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind Source.Issue.Title}" />
                                    <TextBlock
                                        x:Name="CrossReferencedEventSourcePullRequestTitleTextBlock"
                                        VerticalAlignment="Center"
                                        x:Load="{x:Bind Source.PullRequest, Converter={StaticResource ObjectToBoolConverter}}"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind Source.PullRequest.Title}" />
                                </StackPanel>
                            </Button>
                        </Grid>
                    </primer:Timeline.Body>
                </primer:Timeline>
            </DataTemplate>

