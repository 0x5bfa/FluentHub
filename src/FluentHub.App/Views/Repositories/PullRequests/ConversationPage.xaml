                            <primer:Avatar
                                VerticalAlignment="Top"
                                Label="{x:Bind Actor.Login}"
                                Size="20"
                                Source="{x:Bind Actor.AvatarUrl}" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondary}"
                                IsTextSelectionEnabled="True"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="unpinned this" />
                            <TextBlock
                                Grid.Column="2"
                                Foreground="{ThemeResource TextFillColorSecondary}"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Bind CreatedAtHumanized}" />
                        </Grid>
                    </primer:Timeline.Body>
                </primer:Timeline>
            </DataTemplate>

            <DataTemplate x:Key="UnsubscribedEventDataTemplate" x:DataType="modelsV4:UnsubscribedEvent">
                <primer:Timeline>
                    <primer:Timeline.Badge>
                        <FontIcon
                            FontFamily="{StaticResource Octicons}"
                            FontSize="14"
                            Glyph="&#xEADB;" />
                    </primer:Timeline.Badge>
                    <primer:Timeline.Body>
                        <Grid ColumnSpacing="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <primer:Avatar
                                VerticalAlignment="Top"
                                Label="{x:Bind Actor.Login}"
                                Size="20"
                                Source="{x:Bind Actor.AvatarUrl}" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondary}"
                                IsTextSelectionEnabled="True"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="unsubscribed" />
                            <TextBlock
                                Grid.Column="2"
                                Foreground="{ThemeResource TextFillColorSecondary}"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Bind CreatedAtHumanized}" />
                        </Grid>
                    </primer:Timeline.Body>
                </primer:Timeline>
            </DataTemplate>

            <DataTemplate x:Key="UserBlockedEventDataTemplate" x:DataType="modelsV4:UserBlockedEvent">
                <primer:Timeline>
                    <primer:Timeline.Badge>
                        <FontIcon
                            FontFamily="{StaticResource Octicons}"
                            FontSize="14"
                            Glyph="&#xEAD6;" />
                    </primer:Timeline.Badge>
                    <primer:Timeline.Body>
                        <Grid ColumnSpacing="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <primer:Avatar
                                VerticalAlignment="Top"
                                Label="{x:Bind Actor.Login}"
                                Size="20"
                                Source="{x:Bind Actor.AvatarUrl}" />
                            <StackPanel
                                Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="4">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    IsTextSelectionEnabled="True"
                                    Style="{StaticResource BodyTextBlockStyle}">
                                    <Run Foreground="{ThemeResource TextFillColorSecondary}" Text="blocked" />
                                    <Run FontWeight="SemiBold" Text="{x:Bind Subject.Login}" />
                                    <Run Foreground="{ThemeResource TextFillColorSecondary}" Text="in" />
                                    <Run FontWeight="SemiBold" Text="{x:Bind BlockDuration}" />
                                </TextBlock>
                            </StackPanel>
                            <TextBlock
                                Grid.Column="2"
                                Foreground="{ThemeResource TextFillColorSecondary}"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Bind CreatedAtHumanized}" />
                        </Grid>
                    </primer:Timeline.Body>
                </primer:Timeline>
            </DataTemplate>

            <DataTemplate x:Key="DefaultDataTemplate">
                <Grid />
            </DataTemplate>

            <!--
                MentionedEventDataTemplate="{StaticResource MentionedEventDataTemplate}"
                SubscribedEventDataTemplate="{StaticResource SubscribedEventDataTemplate}"
                UnsubscribedEventDataTemplate="{StaticResource UnsubscribedEventDataTemplate}"
            -->

            <models:TimelineItemSelector
                x:Key="TimelineItemSelector"
                AddedToProjectEventDataTemplate="{StaticResource AddedToProjectEventDataTemplate}"
                AssignedEventDataTemplate="{StaticResource AssignedEventDataTemplate}"
                ClosedEventDataTemplate="{StaticResource ClosedEventDataTemplate}"
                CommentDeletedEventDataTemplate="{StaticResource CommentDeletedEventDataTemplate}"
                ConnectedEventDataTemplate="{StaticResource ConnectedEventDataTemplate}"
                ConvertedNoteToIssueEventDataTemplate="{StaticResource ConvertedNoteToIssueEventDataTemplate}"
                ConvertedToDiscussionEventDataTemplate="{StaticResource ConvertedToDiscussionEventDataTemplate}"
                CrossReferencedEventDataTemplate="{StaticResource CrossReferencedEventDataTemplate}"
                DefaultDataTemplate="{StaticResource DefaultDataTemplate}"
                DemilestonedEventDataTemplate="{StaticResource DemilestonedEventDataTemplate}"
                DisconnectedEventDataTemplate="{StaticResource DisconnectedEventDataTemplate}"
                IssueCommentDataTemplate="{StaticResource IssueCommentDataTemplate}"
                LabeledEventDataTemplate="{StaticResource LabeledEventDataTemplate}"
                LockedEventDataTemplate="{StaticResource LockedEventDataTemplate}"
                MarkedAsDuplicateEventDataTemplate="{StaticResource MarkedAsDuplicateEventDataTemplate}"
                MilestonedEventDataTemplate="{StaticResource MilestonedEventDataTemplate}"
                MovedColumnsInProjectEventDataTemplate="{StaticResource MovedColumnsInProjectEventDataTemplate}"
                PinnedEventDataTemplate="{StaticResource PinnedEventDataTemplate}"
                ReferencedEventDataTemplate="{StaticResource ReferencedEventDataTemplate}"
                RemovedFromProjectEventDataTemplate="{StaticResource RemovedFromProjectEventDataTemplate}"
                RenamedTitleEventDataTemplate="{StaticResource RenamedTitleEventDataTemplate}"
                ReopenedEventDataTemplate="{StaticResource ReopenedEventDataTemplate}"
                TransferredEventDataTemplate="{StaticResource TransferredEventDataTemplate}"
                UnassignedEventDataTemplate="{StaticResource UnassignedEventDataTemplate}"
                UnlabeledEventDataTemplate="{StaticResource UnlabeledEventDataTemplate}"
                UnlockedEventDataTemplate="{StaticResource UnlockedEventDataTemplate}"
                UnmarkedAsDuplicateEventDataTemplate="{StaticResource UnmarkedAsDuplicateEventDataTemplate}"
                UnpinnedEventDataTemplate="{StaticResource UnpinnedEventDataTemplate}"
                UserBlockedEventDataTemplate="{StaticResource UserBlockedEventDataTemplate}" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>

        <Grid x:Name="RootContentGrid" x:Load="{x:Bind ViewModel.LoadRepositoryPullRequestConversationPageCommand.ExecutionTask.IsCompletedSuccessfully, Converter={StaticResource ObjectToBoolConverter}, Mode=OneWay}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="0,0,8,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ov:RepositoryOverview ViewModel="{x:Bind ViewModel.RepositoryOverviewViewModel, Mode=OneWay}" />

                    <ov:PullRequestOverview
                        Grid.Row="1"
                        Margin="0,8,0,0"
                        ViewModel="{x:Bind ViewModel.PullRequestOverviewViewModel, Mode=OneWay}" />

                    <Grid
                        Grid.Row="2"
                        Margin="0,8,0,0"
                        Padding="32,0,32,32"
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition
                                Width="*"
                                MinWidth="214"
                                MaxWidth="400" />
                        </Grid.ColumnDefinitions>

                        <StackPanel x:Name="PullRequestContentPanel">

                            <Border
                                Width="1.5"
                                Height="16"
                                Margin="36,0,0,0"
                                HorizontalAlignment="Left"
                                Background="{ThemeResource PrimerBorderMuted}" />

                            <!--  (VerticalCacheLength:) https://github.com/microsoft/microsoft-ui-xaml/issues/3861  -->
                            <ItemsRepeater
                                ItemTemplate="{StaticResource TimelineItemSelector}"
                                ItemsSource="{x:Bind ViewModel.TimelineItems, Mode=OneWay}"
                                VerticalCacheLength="256" />

                            <Border
                                Width="1.5"
                                Height="16"
                                Margin="36,0,0,0"
                                HorizontalAlignment="Left"
                                Background="{ThemeResource PrimerBorderMuted}" />

                        </StackPanel>

                        <StackPanel
                            x:Name="PullRequestDetailsSidebar"
                            Grid.Column="1"
                            Margin="24,32,0,0"
                            Spacing="12">

                            <StackPanel Spacing="12">

                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                        Text="Reviews" />
                                </StackPanel>

                                <Grid>

                                    <StackPanel Spacing="6">
                                        <muxc:ItemsRepeater ItemsSource="{x:Bind ViewModel.PullItem.LatestReviews.Nodes, Mode=OneWay}">
                                            <muxc:ItemsRepeater.Layout>
                                                <muxc:StackLayout Orientation="Vertical" Spacing="6" />
                                            </muxc:ItemsRepeater.Layout>
                                            <DataTemplate x:DataType="modelsV4:PullRequestReview">
                                                <primer:Avatar
                                                    HorizontalAlignment="Left"
                                                    Label="{x:Bind Author.Login, Mode=OneWay}"
                                                    Source="{x:Bind Author.AvatarUrl, Mode=OneWay}" />
                                            </DataTemplate>
                                        </muxc:ItemsRepeater>
                                        <muxc:ItemsRepeater ItemsSource="{x:Bind ViewModel.PullItem.ReviewRequests.Nodes, Mode=OneWay}">
                                            <muxc:ItemsRepeater.Layout>
                                                <muxc:StackLayout Orientation="Vertical" Spacing="6" />
                                            </muxc:ItemsRepeater.Layout>
                                            <DataTemplate x:DataType="modelsV4:ReviewRequest">
                                                <primer:Avatar
                                                    HorizontalAlignment="Left"
                                                    Label="{x:Bind RequestedReviewer.User.Login, Mode=OneWay}"
                                                    Source="{x:Bind RequestedReviewer.User.AvatarUrl, Mode=OneWay}" />
                                            </DataTemplate>
                                        </muxc:ItemsRepeater>
                                    </StackPanel>

                                    <Grid x:Name="PullRequestDetailsSidebarNoReviewersGrid" x:Load="{x:Bind ViewModel.PullItem.ReviewRequests.Nodes.Count, Converter={StaticResource ObjectToBoolConverter}, ConverterParameter=Invert, Mode=OneWay}">
                                        <TextBlock
                                            x:Name="PullRequestDetailsSidebarNoReviewersTextBlock"
                                            x:Load="{x:Bind ViewModel.PullItem.LatestReviews.Nodes.Count, Converter={StaticResource ObjectToBoolConverter}, ConverterParameter=Invert, Mode=OneWay}"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="No reviewers" />
                                    </Grid>
                                </Grid>

                                <MenuFlyoutSeparator />
                            </StackPanel>

                            <StackPanel Spacing="12">

                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                        Text="Assignees" />
                                </StackPanel>

                                <Grid>

                                    <muxc:ItemsRepeater ItemsSource="{x:Bind ViewModel.PullItem.Assignees.Nodes, Mode=OneWay}">
                                        <muxc:ItemsRepeater.Layout>
                                            <muxc:StackLayout Orientation="Vertical" Spacing="6" />
                                        </muxc:ItemsRepeater.Layout>
                                        <DataTemplate x:DataType="modelsV4:User">
                                            <primer:Avatar
                                                HorizontalAlignment="Left"
                                                Label="{x:Bind Login, Mode=OneWay}"
                                                Source="{x:Bind AvatarUrl, Mode=OneWay}" />
                                        </DataTemplate>
                                    </muxc:ItemsRepeater>

                                    <TextBlock
                                        x:Name="PullRequestDetailsSidebarNoAssigneesTextBlock"
                                        x:Load="{x:Bind ViewModel.PullItem.Assignees.Nodes.Count, Converter={StaticResource ObjectToBoolConverter}, ConverterParameter=Invert, Mode=OneWay}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="No assignees" />
                                </Grid>

                                <MenuFlyoutSeparator />
                            </StackPanel>

                            <StackPanel Spacing="12">

                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                        Text="Labels" />
                                </StackPanel>

                                <Grid>

                                    <muxc:ItemsRepeater ItemsSource="{x:Bind ViewModel.PullItem.Labels.Nodes, Mode=OneWay}">
                                        <muxc:ItemsRepeater.Layout>
                                            <muxc:StackLayout Orientation="Vertical" Spacing="6" />
                                        </muxc:ItemsRepeater.Layout>
                                        <DataTemplate x:DataType="modelsV4:Label">
                                            <primer:IssueLabelToken
                                                HorizontalAlignment="Left"
                                                FillColor="{x:Bind Color, Converter={StaticResource HexColorCodeToSolidColorBrushConverter}}"
                                                Text="{x:Bind Name}" />
                                        </DataTemplate>
                                    </muxc:ItemsRepeater>

                                    <TextBlock
                                        x:Name="PullRequestDetailsSidebarNoLabelsTextBlock"
                                        x:Load="{x:Bind ViewModel.PullItem.Labels.Nodes.Count, Converter={StaticResource ObjectToBoolConverter}, ConverterParameter=Invert, Mode=OneWay}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="No labels" />
                                </Grid>

                                <MenuFlyoutSeparator />
                            </StackPanel>

                            <StackPanel Spacing="12">

                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                        Text="Projects" />
                                </StackPanel>

                                <StackPanel>

                                    <TextBlock
                                        Foreground="{ThemeResource TextFillColorSecondary}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="No projects" />

                                </StackPanel>

                                <MenuFlyoutSeparator />
                            </StackPanel>

                            <StackPanel Spacing="12">

                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                        Text="Milestone" />
                                </StackPanel>

                                <Grid>
                                    <Grid
                                        Padding="16,8,16,16"
                                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        RowSpacing="8">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource BodyStrongTextBlockStyle}"
                                            Text="{x:Bind ViewModel.PullItem.Milestone.Title, Mode=OneWay}" />
                                        <ProgressBar
                                            Grid.Row="1"
                                            Maximum="100"
                                            Value="{x:Bind ViewModel.PullItem.Milestone.ProgressPercentage, Mode=OneWay}" />
                                    </Grid>


                                    <TextBlock
                                        x:Name="PullRequestDetailsSidebarNoMilestoneTextBlock"
                                        x:Load="{x:Bind ViewModel.PullItem.Milestone, Converter={StaticResource ObjectToBoolConverter}, ConverterParameter=Invert, Mode=OneWay}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="No milestone" />
                                </Grid>

                                <MenuFlyoutSeparator />
                            </StackPanel>

                            <StackPanel Spacing="12">

                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                        Text="Development" />
                                </StackPanel>

                                <StackPanel>

                                    <TextBlock
                                        Foreground="{ThemeResource TextFillColorSecondary}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="No development" />

                                </StackPanel>

                                <MenuFlyoutSeparator />
                            </StackPanel>

                            <StackPanel Spacing="12">

                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                        Text="Notifications" />
                                </StackPanel>


                                <StackPanel>

                                    <Button
                                        HorizontalAlignment="Stretch"
                                        Content="Subscribe"
                                        IsEnabled="False" />

                                </StackPanel>

                                <MenuFlyoutSeparator />
                            </StackPanel>

                            <StackPanel Spacing="12">

                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                        Text="Participants" />
                                </StackPanel>

                                <Grid>

                                    <muxc:ItemsRepeater ItemsSource="{x:Bind ViewModel.PullItem.Participants.Nodes, Mode=OneWay}">
                                        <muxc:ItemsRepeater.Layout>
                                            <muxc:StackLayout Orientation="Horizontal" Spacing="8" />
                                        </muxc:ItemsRepeater.Layout>
                                        <DataTemplate x:DataType="modelsV4:User">
                                            <primer:Avatar
                                                HorizontalAlignment="Left"
                                                Size="28"
                                                Source="{x:Bind AvatarUrl, Mode=OneWay}" />
                                        </DataTemplate>
                                    </muxc:ItemsRepeater>

                                    <TextBlock
                                        x:Name="PullRequestDetailsSidebarNoParticipantsTextBlock"
                                        x:Load="{x:Bind ViewModel.PullItem.Participants.Nodes.Count, Converter={StaticResource ObjectToBoolConverter}, ConverterParameter=Invert, Mode=OneWay}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="No participants" />
                                </Grid>

                                <MenuFlyoutSeparator />
                            </StackPanel>

                        </StackPanel>

                    </Grid>

                    <Grid
                        Grid.Row="3"
                        Margin="0,8,0,0"
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid>
                            <muxc:NavigationView
                                Margin="12,4,24,4"
                                IsBackButtonVisible="Collapsed"
                                IsSettingsVisible="False"
                                PaneDisplayMode="Top">
                                <muxc:NavigationView.MenuItems>
                                    <muxc:NavigationViewItem
                                        Content="Write"
                                        IsEnabled="False"
                                        IsSelected="True" />
                                    <muxc:NavigationViewItem Content="Preview" IsEnabled="False" />
                                </muxc:NavigationView.MenuItems>

                                <muxc:NavigationView.PaneFooter>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <FontIcon
                                                FontFamily="{StaticResource Octicons}"
                                                FontSize="14"
                                                Glyph="&#xE9CD;" />
                                        </Button>
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <FontIcon
                                                FontFamily="{StaticResource Octicons}"
                                                FontSize="14"
                                                Glyph="&#xEAA7;" />
                                        </Button>
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <FontIcon
                                                FontFamily="{StaticResource Octicons}"
                                                FontSize="14"
                                                Glyph="&#xEA0F;" />
                                        </Button>
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <FontIcon
                                                FontFamily="{StaticResource Octicons}"
                                                FontSize="14"
                                                Glyph="&#xE968;" />
                                        </Button>
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <FontIcon
                                                FontFamily="{StaticResource Octicons}"
                                                FontSize="14"
                                                Glyph="&#xEA50;" />
                                        </Button>
                                    </StackPanel>
                                </muxc:NavigationView.PaneFooter>

                            </muxc:NavigationView>
                        </Grid>

                        <MenuFlyoutSeparator Grid.Row="1" />

                        <Grid
                            Grid.Row="2"
                            Height="256"
                            Background="{ThemeResource LayerFillColorDefaultBrush}">
                            <TextBox
                                Margin="12"
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                IsEnabled="False"
                                PlaceholderText="Leave a comment" />
                        </Grid>

                        <Grid
                            Grid.Row="3"
                            Padding="12,0,12,12"
                            Background="{ThemeResource LayerFillColorDefaultBrush}">

                            <StackPanel
                                HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Spacing="8">
                                <Button Content="Close issue" IsEnabled="False" />
                                <Button
                                    Content="Comment"
                                    IsEnabled="False"
                                    Style="{StaticResource AccentButtonStyle}" />
                            </StackPanel>
                        </Grid>

                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>

        <Grid x:Name="ErrorDisplayingContentGrid" x:Load="{x:Bind ViewModel.LoadRepositoryPullRequestConversationPageCommand.ExecutionTask.IsFaulted, Mode=OneWay}">
            <uc:LoadErrorDisplay
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                TaskException="{x:Bind ViewModel.TaskException, Mode=OneWay}">
                <uc:LoadErrorDisplay.Action>
                    <Grid>
                        <Button
                            Margin="0,24,0,0"
                            HorizontalAlignment="Center"
                            Command="{x:Bind ViewModel.LoadRepositoryPullRequestConversationPageCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE149;" />
                                <TextBlock Text="{helpers:ResourceString Name=TryAgainWithCap}" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </uc:LoadErrorDisplay.Action>
            </uc:LoadErrorDisplay>
        </Grid>

    </Grid>
</Page>
