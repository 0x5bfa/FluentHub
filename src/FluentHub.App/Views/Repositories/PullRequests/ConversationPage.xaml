            <DataTemplate x:Key="ClosedEventDataTemplate" x:DataType="modelsV4:ClosedEvent">
                <Grid>
                    <toolkit:SwitchPresenter TargetType="x:String" Value="{x:Bind StateReason.ToString(), Mode=OneWay}">
                        <toolkit:Case Value="NotPlanned">
                            <primer:Timeline BadgeBackground="{ThemeResource PrimerForegroundMuted}">
                                <primer:Timeline.Badge>
                                    <FontIcon
                                        FontFamily="{StaticResource Octicons}"
                                        FontSize="14"
                                        Glyph="&#xEA84;" />
                                </primer:Timeline.Badge>
                                <primer:Timeline.Body>
                                    <Grid ColumnSpacing="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <primer:Avatar
                                            VerticalAlignment="Top"
                                            Label="{x:Bind Actor.Login}"
                                            Size="20"
                                            Source="{x:Bind Actor.AvatarUrl}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Foreground="{ThemeResource TextFillColorSecondary}"
                                            IsTextSelectionEnabled="True"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="closed this as not planned" />
                                        <TextBlock
                                            Grid.Column="2"
                                            Foreground="{ThemeResource TextFillColorSecondary}"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind CreatedAtHumanized}" />
                                    </Grid>
                                </primer:Timeline.Body>
                            </primer:Timeline>
                        </toolkit:Case>
                        <toolkit:Case Value="Completed">
                            <primer:Timeline BadgeBackground="{ThemeResource PrimerDoneForeground}">
                                <primer:Timeline.Badge>
                                    <FontIcon
                                        FontFamily="{StaticResource Octicons}"
                                        FontSize="14"
                                        Glyph="&#xE9E6;" />
                                </primer:Timeline.Badge>
                                <primer:Timeline.Body>
                                    <Grid ColumnSpacing="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <primer:Avatar
                                            VerticalAlignment="Top"
                                            Label="{x:Bind Actor.Login}"
                                            Size="20"
                                            Source="{x:Bind Actor.AvatarUrl}" />
                                        <StackPanel
                                            Grid.Column="1"
                                            Orientation="Horizontal"
                                            Spacing="4">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Foreground="{ThemeResource TextFillColorSecondary}"
                                                IsTextSelectionEnabled="True"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="closed this as completed" />
                                        </StackPanel>
                                        <TextBlock
                                            Grid.Column="2"
                                            Foreground="{ThemeResource TextFillColorSecondary}"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind CreatedAtHumanized}" />
                                    </Grid>
                                </primer:Timeline.Body>
                            </primer:Timeline>
                        </toolkit:Case>
                    </toolkit:SwitchPresenter>
                </Grid>
            </DataTemplate>

