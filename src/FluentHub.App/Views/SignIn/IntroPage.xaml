<Page
    x:Class="FluentHub.App.Views.SignIn.IntroPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:FluentHub.App.Helpers"
    xmlns:local="using:FluentHub.App.Views.SignIn"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:uc="using:FluentHub.App.UserControls"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar" Background="Transparent">
            <uc:TitleBar Margin="16,4,0,0" />
        </Grid>

        <Grid Grid.Row="1">
            <ScrollViewer x:Name="pane1ScrollViewer" VerticalScrollBarVisibility="Auto">
                <Grid Margin="32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" MaxWidth="448" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="1"
                        Margin="24,8"
                        VerticalAlignment="Center"
                        x:DefaultBindMode="TwoWay"
                        Spacing="4">

                        <TextBlock
                            x:Name="IntroHeader"
                            Margin="0,0,0,12"
                            HorizontalAlignment="Center"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Text="{helpers:ResourceString Name=IntroHeader/Text}" />

                        <TextBlock
                            x:Name="IntroHeaderDescription"
                            Margin="0,0,0,18"
                            HorizontalAlignment="Center"
                            Foreground="{ThemeResource TextFillColorSecondary}"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="FluentHub is a wonderful yet stylish GitHub client for Windows.&#x0A;To use this app, just authorize the app in GitHub in your browser.">
                        </TextBlock>

                        <Grid x:Load="False" Visibility="Collapsed"
                            x:Name="ErrorOrExceptionNotifierGrid"
                            Padding="12"
                            Background="{ThemeResource InfoBarErrorSeverityBackgroundBrush}"
                            BorderBrush="{ThemeResource SystemControlTransientBorderBrush}"
                            CornerRadius="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="Error" />
                            <TextBlock
                                Grid.Row="1"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="The system could not found the file specified." />
                            <Grid
                                Grid.Row="2"
                                Margin="0,12,0,0"
                                ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button HorizontalAlignment="Stretch" Content="Report" />
                                <Button
                                    Grid.Column="1"
                                    HorizontalAlignment="Stretch"
                                    Content="See log details" />
                            </Grid>
                        </Grid>

                        <Grid
                            Margin="0,18"
                            ColumnSpacing="12"
                            RowSpacing="12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="1."
                                TextAlignment="Center" />

                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="2."
                                TextAlignment="Center" />

                            <TextBlock
                                Grid.Row="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="3."
                                TextAlignment="Center" />

                            <TextBlock
                                Grid.Row="3"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="4."
                                TextAlignment="Center" />

                            <TextBlock
                                Grid.Row="4"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="5."
                                TextAlignment="Center" />

                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondary}"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{helpers:ResourceString Name=FirstStepToAuthorize/Text}" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondary}"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{helpers:ResourceString Name=SecondStepToAuthorize/Text}" />

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondary}"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{helpers:ResourceString Name=ThirdStepToAuthorize/Text}" />

                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondary}"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{helpers:ResourceString Name=ForthStepToAuthorize/Text}" />

                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondary}"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{helpers:ResourceString Name=FifthStepToAuthorize/Text}" />

                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="1"
                                HorizontalAlignment="Right">
                                <Hyperlink NavigateUri="https://github.com/FluentHub/FluentHub/blob/HEAD/docs/authorize-app.md" UnderlineStyle="None">
                                    <Run Text="For more detailed steps, visit our docs." />
                                </Hyperlink>
                            </TextBlock>

                        </Grid>

                        <Grid Margin="0,0,0,0" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Stretch"
                                Command="{x:Bind ViewModel.AuthorizeWithBrowserCommand}"
                                Content="{helpers:ResourceString Name=LoginWithGitHub/Content}">
                                <Button.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="Enter" />
                                </Button.KeyboardAccelerators>
                            </Button>
                            <Button
                                x:Name="IfAuthorizedThenGoToMainPageButton"
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                HorizontalAlignment="Stretch"
                                x:Load="False"
                                Content="Go to Main page"
                                Visibility="Collapsed" />
                        </Grid>

                        <HyperlinkButton
                            x:Name="FluentHubGitHubLinkHyperlinkButton"
                            Margin="0,8,0,0"
                            HorizontalAlignment="Right"
                            NavigateUri="https://github.com/FluentHub/FluentHub"
                            ToolTipService.ToolTip="https://github.com/FluentHub/FluentHub">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon
                                    FontFamily="{StaticResource Octicons}"
                                    FontSize="16"
                                    Glyph="&#xEA0B;" />
                                <TextBlock Text="FluentHub" />
                            </StackPanel>
                        </HyperlinkButton>

                    </StackPanel>
                </Grid>

            </ScrollViewer>

        </Grid>
    </Grid>
</Page>
