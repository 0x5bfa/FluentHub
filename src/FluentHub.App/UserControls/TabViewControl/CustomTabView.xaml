<UserControl
	x:Class="FluentHub.App.UserControls.TabViewControl.CustomTabView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:dataitems="using:FluentHub.App.Data.Items"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="300"
	d:DesignWidth="400"
	mc:Ignorable="d">

	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/ResourceDictionaries/CustomTabViewItemStyle.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<Border
		x:Name="TitlebarArea"
		HorizontalAlignment="Stretch"
		x:FieldModifier="public"
		Background="Transparent">

		<TabView
			x:Name="MainTabView"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			AllowDropTabs="True"
			CanReorderTabs="True"
			IsAddTabButtonVisible="False"
			SelectedIndex="{x:Bind SelectedIndex, Mode=TwoWay}"
			SelectedItem="{x:Bind SelectedItem, Mode=TwoWay}"
			TabCloseRequested="OnMainTabViewTabCloseRequested"
			TabItemsSource="{x:Bind TabItems, Mode=OneWay}">

			<TabView.TabItemTemplate>
				<DataTemplate x:DataType="dataitems:TabViewItem">

					<TabViewItem
						Header="{x:Bind NavigationHistory.CurrentItem.Header, Mode=OneWay}"
						IconSource="{x:Bind NavigationHistory.CurrentItem.Icon, Mode=OneWay}"
						Loaded="TabViewItem_Loaded"
						Style="{StaticResource TabViewItemStyle}"
						ToolTipService.Placement="Bottom"
						ToolTipService.ToolTip="{x:Bind NavigationHistory.CurrentItem.Description, Mode=OneWay}" />

				</DataTemplate>
			</TabView.TabItemTemplate>

			<TabView.TabStripFooter>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition x:Name="RightPaddingColumn" Width="0" />
					</Grid.ColumnDefinitions>

					<Button
						x:Name="AddNewTabViewItemButton"
						Grid.Column="0"
						Width="28"
						Height="28"
						Margin="-4,0,0,2"
						Padding="0"
						HorizontalAlignment="Left"
						VerticalAlignment="Bottom"
						Background="Transparent"
						BorderThickness="0"
						Click="OnAddNewTabButtonClick"
						IsEnabled="True"
						ToolTipService.ToolTip="New tab">
						<Button.Content>
							<FontIcon FontSize="12" Glyph="&#xE710;" />
						</Button.Content>
					</Button>

					<Grid
						x:Name="DragAreaGrid"
						Grid.Column="1"
						Grid.ColumnSpan="2"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Background="Transparent" />

				</Grid>
			</TabView.TabStripFooter>

		</TabView>

	</Border>
</UserControl>
