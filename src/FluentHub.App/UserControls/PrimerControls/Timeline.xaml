<UserControl
    x:Class="FluentHub.App.UserControls.PrimerControls.Timeline"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:FluentHub.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentHub.App.UserControls.PrimerControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <converters:ObjectToBoolConverter x:Key="ObjectToBoolConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Width="1.5"
            Height="16"
            Margin="36,0,0,0"
            HorizontalAlignment="Left"
            Background="{ThemeResource PrimerBorderMuted}" />

        <Grid
            Grid.Row="1"
            Margin="4,0"
            HorizontalAlignment="Stretch">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid
                Width="28"
                Height="28"
                Margin="20,0,8,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="{x:Bind BadgeBackground, Mode=OneWay}"
                BorderBrush="Transparent"
                BorderThickness="2"
                CornerRadius="14" />

            <Grid
                Width="28"
                Height="28"
                Margin="20,0,8,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                BorderBrush="Transparent"
                BorderThickness="2"
                CornerRadius="14">

                <ContentPresenter
                    x:Name="TimelineBadgeContentPresenter"
                    x:Load="{x:Bind Badge, Converter={StaticResource ObjectToBoolConverter}, Mode=OneWay}"
                    Content="{x:Bind Badge, Mode=OneWay}" />

            </Grid>

            <Border
                Grid.Row="1"
                Width="1.5"
                Margin="32,0,0,0"
                HorizontalAlignment="Left"
                Background="{ThemeResource PrimerBorderMuted}" />

            <Grid
                Grid.RowSpan="3"
                Grid.Column="1"
                Margin="0,4,0,0"
                VerticalAlignment="Top">
                <ContentPresenter
                    x:Name="TimelineBodyContentPresenter"
                    VerticalAlignment="Center"
                    x:Load="{x:Bind Body, Converter={StaticResource ObjectToBoolConverter}, Mode=OneWay}"
                    Content="{x:Bind Body, Mode=OneWay}" />
            </Grid>

        </Grid>

        <Border
            Grid.Row="2"
            Width="1.5"
            Height="10"
            Margin="36,0,0,0"
            HorizontalAlignment="Left"
            Background="{ThemeResource PrimerBorderMuted}" />
    </Grid>
</UserControl>
