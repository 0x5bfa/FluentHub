<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>FluentHub.Octokit</RootNamespace>
    <AssemblyName>FluentHub.Octokit</AssemblyName>
    <Platforms>x86;x64;arm64</Platforms>
    <RuntimeIdentifiers>win-arm64;win-x86;win-x64</RuntimeIdentifiers>
    <LangVersion>latest</LangVersion>
    <Configurations>Debug;Release;Sideload</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Humanizer" Version="2.8.25" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="Octokit" Version="0.52.0" />
    <PackageReference Include="Octokit.GraphQL" Version="0.1.8-beta" />
  </ItemGroup>
</Project>
