    <Grid>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <RepositionThemeTransition />
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,0,0,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <uc:RepositoryOverview Margin="0,0,8,0" ViewModel="{x:Bind ViewModel.RepositoryOverviewViewModel, Mode=OneWay}" />

                <Grid
                    Grid.Row="1"
                    Margin="0,8,8,0"
                    Padding="32,24,32,16"
                    Background="{ThemeResource CardBackgroundFillColorSecondary}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Margin="8,0"
                        Orientation="Horizontal"
                        Spacing="8">
                        <TextBlock
                            x:Name="IssueTitleTextBlock"
                            FontWeight="Normal"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Text="{x:Bind ViewModel.IssueItem.Title, Mode=OneWay}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                FontWeight="ExtraLight"
                                Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                Style="{StaticResource TitleTextBlockStyle}"
                                Text="#" />
                            <TextBlock
                                FontWeight="ExtraLight"
                                Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                Style="{StaticResource TitleTextBlockStyle}"
                                Text="{x:Bind ViewModel.IssueItem.Number, Mode=OneWay}" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        Margin="8"
                        Orientation="Horizontal"
                        Spacing="8">
                        <toolkit:SwitchPresenter TargetType="x:Boolean" Value="{x:Bind ViewModel.IssueItem.Closed, Mode=OneWay}">
                            <toolkit:Case Value="True">
                                <labels:StateLabel Type="IssueClosed" />
                            </toolkit:Case>
                            <toolkit:Case Value="False">
                                <labels:StateLabel Type="IssueOpen" />
                            </toolkit:Case>
                        </toolkit:SwitchPresenter>
                    </StackPanel>

                    <Button
                        Grid.RowSpan="2"
                        Width="36"
                        Height="32"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Center"
                        Click="OnDisplayDetailsTogglingButtonClick">
                        <muxc:AnimatedIcon
                            x:Name="BackAnimatedIcon"
                            Width="16"
                            Height="16">
                            <muxc:AnimatedIcon.Source>
                                <animatedvisuals:AnimatedGlobalNavigationButtonVisualSource />
                            </muxc:AnimatedIcon.Source>
                            <muxc:AnimatedIcon.FallbackIconSource>
                                <muxc:FontIconSource FontSize="14" Glyph="&#xE700;" />
                            </muxc:AnimatedIcon.FallbackIconSource>
                        </muxc:AnimatedIcon>
                    </Button>

                </Grid>

                <Grid
                    Grid.Row="2"
                    Margin="0,8,8,0"
                    Padding="32,0,32,32"
                    Background="{ThemeResource CardBackgroundFillColorSecondary}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition
                            x:Name="DetailsGridColumnDefinition"
                            Width="0"
                            MaxWidth="400" />
                    </Grid.ColumnDefinitions>

                    <StackPanel x:Name="IssueContentPanel">

                        <Border
                            Width="1.5"
                            Height="16"
                            Margin="36,0,0,0"
                            HorizontalAlignment="Left"
                            Background="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                            Opacity="0.3" />

                        <ItemsControl ItemsSource="{x:Bind ViewModel.EventBlocks, Mode=OneWay}" />
                        <!--<muxc:ItemsRepeater ItemTemplate="{StaticResource TimelineItemSelector}" ItemsSource="{x:Bind ViewModel.TimelineItems, Mode=OneWay}" />-->

                        <Border
                            Width="1.5"
                            Height="16"
                            Margin="36,0,0,0"
                            HorizontalAlignment="Left"
                            Background="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                            Opacity="0.3" />

                    </StackPanel>

                    <StackPanel
                        Grid.Column="1"
                        Margin="12,32,0,0"
                        Spacing="12">
                        <StackPanel Spacing="12">

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"
                                    Text="Reviews" />
                            </StackPanel>


                            <StackPanel>

                                <TextBlock
                                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="No reviews — at least 1 approving review is required." />

                            </StackPanel>

                            <MenuFlyoutSeparator />
                        </StackPanel>

                        <StackPanel Spacing="12">

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"
                                    Text="Assignees" />
                            </StackPanel>


                            <StackPanel>

                                <TextBlock
                                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="No one — assign yourself" />

                            </StackPanel>

                            <MenuFlyoutSeparator />
                        </StackPanel>

                        <StackPanel Spacing="12">

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"
                                    Text="Labels" />
                            </StackPanel>


                            <StackPanel>

                                <TextBlock
                                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="No labels" />

                            </StackPanel>

                            <MenuFlyoutSeparator />
                        </StackPanel>

                        <StackPanel Spacing="12">

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"
                                    Text="Projects" />
                            </StackPanel>


                            <StackPanel>

                                <TextBlock
                                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="None" />

                            </StackPanel>

                            <MenuFlyoutSeparator />
                        </StackPanel>

                        <StackPanel Spacing="12">

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"
                                    Text="Milestones" />
                            </StackPanel>


                            <StackPanel>

                                <TextBlock
                                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="None" />

                            </StackPanel>

                            <MenuFlyoutSeparator />
                        </StackPanel>

                        <StackPanel Spacing="12">

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"
                                    Text="Development" />
                            </StackPanel>


                            <StackPanel>

                                <TextBlock
                                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="None" />

                            </StackPanel>

                            <MenuFlyoutSeparator />
                        </StackPanel>

                        <StackPanel Spacing="12">

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"
                                    Text="Notifications" />
                            </StackPanel>


                            <StackPanel>

                                <Button HorizontalAlignment="Stretch" Content="Notifications" />

                            </StackPanel>

                            <MenuFlyoutSeparator />
                        </StackPanel>

                        <StackPanel Spacing="12">

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyStrongTextBlockStyle}"
                                    Text="Participants" />
                            </StackPanel>


                            <StackPanel>

                                <TextBlock
                                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="None" />

                            </StackPanel>

                            <MenuFlyoutSeparator />
                        </StackPanel>

                    </StackPanel>

                    <Border
                        Grid.ColumnSpan="2"
                        Height="3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Background="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                        Opacity="0.3" />

                </Grid>

                <StackPanel
                    Grid.Row="3"
                    Margin="0,8,8,0"
                    VerticalAlignment="Top">
                    <Grid
                        Background="{ThemeResource CardBackgroundFillColorSecondary}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid>
                            <muxc:NavigationView
                                Margin="12,4,24,4"
                                IsBackButtonVisible="Collapsed"
                                IsSettingsVisible="False"
                                PaneDisplayMode="Top">
                                <muxc:NavigationView.MenuItems>
                                    <muxc:NavigationViewItem Content="Write" IsSelected="True" />
                                    <muxc:NavigationViewItem Content="Preview" />
                                </muxc:NavigationView.MenuItems>
                                <muxc:NavigationView.PaneFooter>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <FontIcon
                                                FontFamily="{StaticResource Octicons}"
                                                FontSize="14"
                                                Glyph="&#xE9CD;" />
                                        </Button>
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <FontIcon
                                                FontFamily="{StaticResource Octicons}"
                                                FontSize="14"
                                                Glyph="&#xEAA7;" />
                                        </Button>
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <FontIcon
                                                FontFamily="{StaticResource Octicons}"
                                                FontSize="14"
                                                Glyph="&#xEA0F;" />
                                        </Button>
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <FontIcon
                                                FontFamily="{StaticResource Octicons}"
                                                FontSize="14"
                                                Glyph="&#xE968;" />
                                        </Button>
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <FontIcon
                                                FontFamily="{StaticResource Octicons}"
                                                FontSize="14"
                                                Glyph="&#xEA50;" />
                                        </Button>
                                    </StackPanel>
                                </muxc:NavigationView.PaneFooter>
                            </muxc:NavigationView>
                        </Grid>

                        <MenuFlyoutSeparator Grid.Row="1" />

                        <Grid
                            Grid.Row="2"
                            Height="256"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                            <TextBox
                                Margin="12"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                IsEnabled="False"
                                PlaceholderText="Leave a comment" />
                        </Grid>

                        <Grid
                            Grid.Row="3"
                            Padding="12,0,12,12"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

                            <StackPanel
                                HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Spacing="8">
                                <Button Content="Close issue" IsEnabled="False" />
                                <Button
                                    Content="Comment"
                                    IsEnabled="False"
                                    Style="{StaticResource AccentButtonStyle}" />
                            </StackPanel>
                        </Grid>

                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <toolkit:SwitchPresenter
            Grid.RowSpan="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            TargetType="x:Boolean"
            Value="{x:Bind ViewModel.RefreshIssuePageCommand.IsRunning, Mode=OneWay}">

            <toolkit:Case Value="False">
                <toolkit:SwitchPresenter TargetType="x:Boolean" Value="{x:Bind ViewModel.RefreshIssuePageCommand.ExecutionTask.IsFaulted, Mode=OneWay}">

                    <toolkit:Case Value="True">
                        <HyperlinkButton HorizontalAlignment="Center" Command="{x:Bind ViewModel.RefreshIssuePageCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE149;" />
                                <TextBlock Text="Refresh" />
                            </StackPanel>
                        </HyperlinkButton>
                    </toolkit:Case>

                </toolkit:SwitchPresenter>
            </toolkit:Case>
        </toolkit:SwitchPresenter>
    </Grid>
</Page>
