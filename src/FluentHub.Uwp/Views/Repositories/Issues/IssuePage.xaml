                    Grid.Row="3"
                    Margin="0,8,8,0"
                    VerticalAlignment="Top">
                    <Grid
                        Background="{ThemeResource CardBackgroundFillColorSecondary}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid>
                            <muxc:NavigationView
                                Margin="12,4,24,4"
                                IsBackButtonVisible="Collapsed"
                                IsSettingsVisible="False"
                                PaneDisplayMode="Top">
                                <muxc:NavigationView.MenuItems>
                                    <muxc:NavigationViewItem Content="Write" IsSelected="True" />
                                    <muxc:NavigationViewItem Content="Preview" />
                                </muxc:NavigationView.MenuItems>
                                <muxc:NavigationView.PaneFooter>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <FontIcon
                                                FontFamily="{StaticResource Octicons}"
                                                FontSize="14"
                                                Glyph="&#xE9CD;" />
                                        </Button>
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <FontIcon
                                                FontFamily="{StaticResource Octicons}"
                                                FontSize="14"
                                                Glyph="&#xEAA7;" />
                                        </Button>
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <FontIcon
                                                FontFamily="{StaticResource Octicons}"
                                                FontSize="14"
                                                Glyph="&#xEA0F;" />
                                        </Button>
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <FontIcon
                                                FontFamily="{StaticResource Octicons}"
                                                FontSize="14"
                                                Glyph="&#xE968;" />
                                        </Button>
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <FontIcon
                                                FontFamily="{StaticResource Octicons}"
                                                FontSize="14"
                                                Glyph="&#xEA50;" />
                                        </Button>
                                    </StackPanel>
                                </muxc:NavigationView.PaneFooter>
                            </muxc:NavigationView>
                        </Grid>

                        <MenuFlyoutSeparator Grid.Row="1" />

                        <Grid
                            Grid.Row="2"
                            Height="256"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                            <TextBox
                                Margin="12"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                IsEnabled="False"
                                PlaceholderText="Leave a comment" />
                        </Grid>

                        <Grid
                            Grid.Row="3"
                            Padding="12,0,12,12"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

                            <StackPanel
                                HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Spacing="8">
                                <Button Content="Close issue" IsEnabled="False" />
                                <Button
                                    Content="Comment"
                                    IsEnabled="False"
                                    Style="{StaticResource AccentButtonStyle}" />
                            </StackPanel>
                        </Grid>

                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <toolkit:SwitchPresenter
            Grid.RowSpan="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            TargetType="x:Boolean"
            Value="{x:Bind ViewModel.RefreshIssuePageCommand.IsRunning, Mode=OneWay}">

            <toolkit:Case Value="False">
                <toolkit:SwitchPresenter TargetType="x:Boolean" Value="{x:Bind ViewModel.RefreshIssuePageCommand.ExecutionTask.IsFaulted, Mode=OneWay}">

                    <toolkit:Case Value="True">
                        <HyperlinkButton HorizontalAlignment="Center" Command="{x:Bind ViewModel.RefreshIssuePageCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE149;" />
                                <TextBlock Text="Refresh" />
                            </StackPanel>
                        </HyperlinkButton>
                    </toolkit:Case>

                </toolkit:SwitchPresenter>
            </toolkit:Case>
        </toolkit:SwitchPresenter>
    </Grid>
</Page>
