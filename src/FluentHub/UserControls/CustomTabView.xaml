<UserControl
    x:Class="FluentHub.UserControls.CustomTabView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentHub.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:FluentHub.Models"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:root="using:FluentHub"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <MenuFlyout x:Key="TabFlyout" x:Name="TabItemContextMenu">
                        <MenuFlyoutItem Text="New tab">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xF164;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="Duplicate tab">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xECCD;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </ResourceDictionary>
                <ResourceDictionary Source="/ResourceDictionaries/TabView_themeresources.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/TabViewItem_shared.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <muxc:TabView
            x:Name="MainTabView"
            Margin="4,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            Background="Transparent"
            IsAddTabButtonVisible="False"
            Loaded="MainTabView_Loaded"
            SelectionChanged="MainTabView_SelectionChanged"
            TabCloseRequested="MainTabView_TabCloseRequested"
            TabItemsSource="{x:Bind root:App.MainViewModel.MainTabItems, Mode=OneWay}">
            <muxc:TabView.TabItemTemplate>
                <DataTemplate x:DataType="local:TabItem">
                    <muxc:TabViewItem
                        Padding="2,0,2,2"
                        ContextFlyout="{StaticResource TabFlyout}"
                        CornerRadius="4"
                        Header="{x:Bind Header, Mode=OneWay}"
                        IconSource="{x:Bind IconSource, Mode=OneWay}"
                        Style="{ThemeResource TabViewItemStyle}" />
                </DataTemplate>
            </muxc:TabView.TabItemTemplate>
        </muxc:TabView>
        <Button
            Grid.Column="1"
            Width="32"
            Height="32"
            Padding="8"
            HorizontalAlignment="Left"
            Background="Transparent"
            BorderThickness="0"
            Click="AddNewTabButton_Click"
            IsEnabled="False"
            Style="{StaticResource ClearButtonStyle}"
            ToolTipService.ToolTip="New tab">
            <Button.Content>
                <FontIcon FontSize="12" Glyph="&#xE710;" />
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
