<UserControl
    x:Class="FluentHub.UserControls.Blocks.FileNavigationBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentHub.UserControls.Blocks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:uc="using:FluentHub.UserControls"
    mc:Ignorable="d">

    <Grid Margin="12,0" ColumnSpacing="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ComboBox>
            <ComboBoxItem Content="main" IsSelected="True" />
            <ComboBoxItem Content="tt/general-updates" />
        </ComboBox>
        <Button
            Grid.Column="1"
            Content="0 branches"
            Style="{StaticResource LinkLikeButtonStyle}" />
        <Button
            Grid.Column="2"
            Content="0 tags"
            Style="{StaticResource LinkLikeButtonStyle}" />
        <Button Grid.Column="4" Content="Go to file" />
        <muxc:DropDownButton Grid.Column="5" Content="Add files" />
        <muxc:DropDownButton
            Grid.Column="6"
            Content="Code"
            Style="{ThemeResource AccentButtonStyle}">
            <muxc:DropDownButton.Flyout>
                <Flyout Placement="BottomEdgeAlignedRight">
                    <Flyout.FlyoutPresenterStyle>
                        <Style TargetType="FlyoutPresenter">
                            <Setter Property="Padding" Value="8" />
                            <Setter Property="CornerRadius" Value="6" />
                        </Style>
                    </Flyout.FlyoutPresenterStyle>
                    <uc:GitCloneFlyout />
                </Flyout>
            </muxc:DropDownButton.Flyout>
        </muxc:DropDownButton>
    </Grid>
</UserControl>
