<UserControl
    x:Class="FluentHub.UserControls.Blocks.FileNavigationBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentHub.UserControls.Blocks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:uc="using:FluentHub.UserControls"
    mc:Ignorable="d">

    <Grid Margin="12,0" ColumnSpacing="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ComboBox>
            <ComboBoxItem Content="main" IsSelected="True" />
            <ComboBoxItem Content="tt/general-updates" />
        </ComboBox>
        <Button
            Grid.Column="1"
            Content="0 branches"
            Style="{StaticResource LinkLikeButtonStyle}" />
        <Button
            Grid.Column="2"
            Content="0 tags"
            Style="{StaticResource LinkLikeButtonStyle}" />
        <Button Grid.Column="4" Content="Go to file" />
        <muxc:DropDownButton Grid.Column="5" Content="Add files" />
        <muxc:DropDownButton
            Grid.Column="6"
            muxc:AnimatedIcon.State="Normal"
            Loaded="OnCloneButtonLoaded"
            Style="{StaticResource AccentButtonStyle}">
            <muxc:DropDownButton.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Clone" />

                    <muxc:AnimatedIcon
                        x:Name="ChevronIcon"
                        Grid.Column="1"
                        Width="12"
                        Height="12"
                        Margin="8,0,0,0"
                        muxc:AnimatedIcon.State="Normal"
                        AutomationProperties.AccessibilityView="Raw">
                        <animatedvisuals:AnimatedChevronDownSmallVisualSource />
                        <muxc:AnimatedIcon.FallbackIconSource>
                            <muxc:FontIconSource
                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                FontSize="8"
                                Glyph="&#xE96E;"
                                IsTextScaleFactorEnabled="False" />
                        </muxc:AnimatedIcon.FallbackIconSource>
                    </muxc:AnimatedIcon>
                </Grid>
            </muxc:DropDownButton.Content>
            <muxc:DropDownButton.Flyout>
                <Flyout Placement="BottomEdgeAlignedRight">
                    <Flyout.FlyoutPresenterStyle>
                        <Style TargetType="FlyoutPresenter">
                            <Setter Property="Padding" Value="8" />
                            <Setter Property="CornerRadius" Value="{StaticResource OverlayCornerRadius}" />
                        </Style>
                    </Flyout.FlyoutPresenterStyle>
                    <uc:GitCloneFlyout />
                </Flyout>
            </muxc:DropDownButton.Flyout>
        </muxc:DropDownButton>
    </Grid>
</UserControl>
