<UserControl
    x:Class="FluentHub.UserControls.Blocks.DiffBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentHub.UserControls.Blocks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid
        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
        BorderThickness="1"
        CornerRadius="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Height="32" Margin="8,4">
            <StackPanel Orientation="Horizontal" Spacing="8">

                <Button
                    Width="32"
                    Height="32"
                    Background="Transparent"
                    Style="{StaticResource LinkLikeButtonStyle}">
                    <FontIcon
                        FontSize="12"
                        FontWeight="SemiBold"
                        Glyph="&#xE70D;" />
                </Button>

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="Cascadia Code"
                        FontWeight="SemiLight"
                        Foreground="#347d39"
                        IsTextSelectionEnabled="True"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="+" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="Cascadia Code"
                        FontWeight="SemiLight"
                        Foreground="#347d39"
                        IsTextSelectionEnabled="True"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind ViewModel.ChangedFile.LineAdditions, Mode=OneWay}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="Cascadia Code"
                        FontWeight="SemiLight"
                        Foreground="#c93c37"
                        IsTextSelectionEnabled="True"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="-" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="Cascadia Code"
                        FontWeight="SemiLight"
                        Foreground="#c93c37"
                        IsTextSelectionEnabled="True"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind ViewModel.ChangedFile.LineDeletions, Mode=OneWay}" />
                </StackPanel>

                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="Cascadia Code"
                    FontWeight="SemiLight"
                    IsTextSelectionEnabled="True"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="{x:Bind ViewModel.ChangedFile.FileName, Mode=OneWay}" />

            </StackPanel>
        </Grid>


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <MenuFlyoutSeparator VerticalAlignment="Top" />

            <muxc:ItemsRepeater
                Grid.ColumnSpan="3"
                HorizontalAlignment="Stretch"
                ItemsSource="{x:Bind ViewModel.ChangedLineBackgroundType}">
                <muxc:ItemsRepeater.Layout>
                    <muxc:StackLayout Orientation="Vertical" Spacing="0" />
                </muxc:ItemsRepeater.Layout>
                <DataTemplate x:DataType="x:Int32">
                    <toolkit:SwitchPresenter TargetType="x:Int32" Value="{x:Bind}">
                        <toolkit:Case Value="0">
                            <Border Height="17" Background="#768390" />
                        </toolkit:Case>
                        <toolkit:Case Value="1">
                            <Border
                                Height="17"
                                Background="#347d39"
                                Opacity="0.5" />
                        </toolkit:Case>
                        <toolkit:Case Value="2">
                            <Border
                                Height="17"
                                Background="#c93c37"
                                Opacity="0.5" />
                        </toolkit:Case>
                        <toolkit:Case Value="3">
                            <Border Height="17" Background="Transparent" />
                        </toolkit:Case>
                    </toolkit:SwitchPresenter>
                </DataTemplate>
            </muxc:ItemsRepeater>

            <TextBlock
                Margin="12,0"
                FontFamily="Cascadia Code"
                FontWeight="ExtraLight"
                Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                HorizontalTextAlignment="Right"
                LineHeight="17"
                Text="{x:Bind ViewModel.OldLineText, Mode=OneWay}" />

            <TextBlock
                Grid.Column="1"
                Margin="12,0"
                FontFamily="Cascadia Code"
                FontWeight="ExtraLight"
                Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                HorizontalTextAlignment="Right"
                LineHeight="17"
                Text="{x:Bind ViewModel.NewLineText, Mode=OneWay}" />

            <ScrollViewer
                Grid.Column="2"
                HorizontalScrollBarVisibility="Auto"
                HorizontalScrollMode="Enabled"
                VerticalScrollBarVisibility="Disabled"
                VerticalScrollMode="Disabled">

                <TextBlock
                    FontFamily="Cascadia Code"
                    FontWeight="SemiLight"
                    IsTextSelectionEnabled="True"
                    LineHeight="17"
                    Text="{x:Bind ViewModel.ChangedFile.Patch, Mode=OneWay}" />

            </ScrollViewer>

        </Grid>
    </Grid>
</UserControl>
