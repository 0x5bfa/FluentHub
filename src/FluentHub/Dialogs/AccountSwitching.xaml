<ContentDialog
    x:Class="FluentHub.Dialogs.AccountSwitching"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bbvm="using:FluentHub.ViewModels.UserControls.ButtonBlocks"
    xmlns:block="using:FluentHub.UserControls.ButtonBlocks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentHub.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <x:Double x:Key="ContentDialogMinWidth">760</x:Double>
        <x:Double x:Key="ContentDialogMinHeight">490</x:Double>
    </ContentDialog.Resources>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <FontIcon
                    Margin="0,6,12,0"
                    VerticalAlignment="Center"
                    FontSize="24"
                    Glyph="&#xE125;" />
                <TextBlock
                    HorizontalAlignment="Left"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="Switch Account" />
            </StackPanel>


            <Button
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <FontIcon
                        VerticalAlignment="Bottom"
                        FontSize="16"
                        Glyph="&#xE710;" />
                    <TextBlock Text="Add Account" />
                </StackPanel>
            </Button>
        </Grid>
        <ScrollViewer Grid.Row="1">
            <muxc:ItemsRepeater>
                <DataTemplate x:DataType="bbvm:AccountButtonBlockViewModel">
                    <block:AccountButtonBlock ViewModel="{x:Bind}" />
                </DataTemplate>
            </muxc:ItemsRepeater>
            <!--  <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="This feature isn't availiable at the moment. Sorry for the inconveniences." />-->
        </ScrollViewer>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="1"
                HorizontalAlignment="Right"
                Click="CloseButton_Click"
                Content="Close" />
        </Grid>
    </Grid>

</ContentDialog>
