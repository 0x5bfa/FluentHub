<Page
    x:Class="FluentHub.Views.Repositories.IssuePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:block="using:FluentHub.UserControls.ButtonBlocks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:item="using:FluentHub.Models.Items"
    xmlns:label="using:FluentHub.UserControls.Labels"
    xmlns:local="using:FluentHub.Views.Repositories"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Padding="24,18,24,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Margin="0,0,0,8"
                Orientation="Horizontal"
                Spacing="3">
                <Border
                    Width="18"
                    Height="18"
                    Margin="0,0,5,0"
                    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    CornerRadius="10">
                    <Image Source="https://avatars.githubusercontent.com/u/62196528" />
                </Border>
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Text="fluenthub-community" />
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Text="/" />
                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Text="FluentHub" />
            </StackPanel>
            <StackPanel
                Grid.Row="1"
                Orientation="Horizontal"
                Spacing="8">
                <TextBlock
                    x:Name="IssueTitleTextBlock"
                    FontWeight="Normal"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="OAuth Access Restriction" />
                <TextBlock
                    x:Name="IssueNumberTextBlock"
                    FontWeight="SemiLight"
                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="#1" />
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Margin="0,4,0,8"
                Orientation="Horizontal"
                Spacing="8">
                <label:StateLabel x:Name="StatusLabel" Status="IssueDraft" />
                <label:LabelControl
                    IsOutlineEnable="True"
                    LabelBackground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                    LabelText="Status">
                    <label:LabelControl.Icon>
                        <FontIcon
                            FontFamily="{StaticResource Octions}"
                            FontSize="14"
                            Foreground="#26a641"
                            Glyph="&#xE934;" />
                    </label:LabelControl.Icon>
                </label:LabelControl>
                <label:LabelControl
                    IsOutlineEnable="True"
                    LabelBackground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                    LabelText="Checks">
                    <label:LabelControl.Icon>
                        <FontIcon
                            FontFamily="{StaticResource Octions}"
                            FontSize="14"
                            Foreground="#26a641"
                            Glyph="&#xE934;" />
                    </label:LabelControl.Icon>
                </label:LabelControl>
            </StackPanel>
            <Grid
                Grid.RowSpan="3"
                Grid.Column="1"
                Margin="0,0,0,8">
                <Button VerticalAlignment="Bottom">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon FontSize="16" Glyph="&#xE946;" />
                        <TextBlock Text="Details" />
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
        <MenuFlyoutSeparator Grid.Row="1" />
        <Grid Grid.Row="2">
            <ScrollViewer Padding="12,2,12,0">
                <StackPanel x:Name="IssueContentPanel" />
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
