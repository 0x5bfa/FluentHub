<Page
    x:Class="FluentHub.Views.SignIn.IntroPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentHub.Views.SignIn"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:uc="using:FluentHub.UserControls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar" Background="Transparent">
            <uc:TitleBar Margin="12,0,0,0" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Row="1"
                Width="400"
                Margin="0,-50,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <StackPanel Orientation="Vertical">
                    <Image Source="/Assets/OOBEHERO.png" Stretch="Uniform"
                           Width="Auto"
                           Height="Auto"/>

                    <TextBlock x:Uid="Oobe_HowToUse"
                           Style="{ThemeResource TitleTextBlockStyle}" Text="Welcome to FluentHub"/>
                    <TextBlock x:Uid="Oobe_HowToUse"
                           Style="{ThemeResource BodyTextBlockStyle}" 
                           Text="A stylish yet wonderfully powerful GitHub Oauth client made with Fluent Design and WinUI 2.7"/>
                    <!--<HyperlinkButton NavigateUri="https://aka.ms/PowerToysOverview" Style="{ThemeResource AccentButtonStyle}">
                    <TextBlock x:Uid="Oobe_Overview_DescriptionLinkText"
                               TextWrapping="Wrap" />
                </HyperlinkButton>-->

                    <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,24,0,0">
                        <Button x:Uid="OOBE_Settings"
                            Style="{ThemeResource AccentButtonStyle}"
                            Click="SetupButton_Click"
                            Content="Setup"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WideWindow">
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ImageGrid.Visibility" Value="Visible" />
                        <Setter Target="TextGrid.Grid.Column" Value="1" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="500" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ImageGrid.Visibility" Value="Collapsed" />
                        <Setter Target="TextGrid.Grid.Column" Value="0" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>

</Page>
