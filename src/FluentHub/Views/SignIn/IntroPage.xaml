<Page
    x:Class="FluentHub.Views.SignIn.IntroPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentHub.Views.SignIn"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:uc="using:FluentHub.UserControls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">

    <Grid>

        <Grid
            x:Name="AppTitleBar"
            Height="48"
            VerticalAlignment="Top"
            Background="Transparent"
            Canvas.ZIndex="1">
            <uc:TitleBar Margin="12,0,0,0" />
        </Grid>

        <StackPanel VerticalAlignment="Top">

            <StackPanel Margin="84,0" Orientation="Vertical">
                <Image
                    Width="Auto"
                    Height="Auto"
                    Margin="-84,0"
                    Source="/Assets/OOBEHERO.png"
                    Stretch="UniformToFill" />

                <TextBlock
                    x:Name="OobeWelcomeTextBlock"
                    x:Uid="OobeWelcomeTextBlock"
                    Margin="0,24,0,0"
                    HorizontalAlignment="Left"
                    Foreground="White"
                    LineStackingStrategy="MaxHeight"
                    Style="{ThemeResource TitleTextBlockStyle}"
                    Text="Welcome To FluentHub" />

                <TextBlock
                    x:Name="OobeAppDescriptionTextBlock"
                    x:Uid="OobeAppDescriptionTextBlock"
                    Margin="0,12,0,0"
                    HorizontalAlignment="Left"
                    Foreground="#bbbbbb"
                    LineStackingStrategy="MaxHeight"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Text="A stylish yet wonderfully powerful GitHub Oauth client." />

                <TextBlock
                    x:Name="OobeDocumentationTextBlock"
                    x:Uid="OobeDocumentationTextBlock"
                    Margin="0,12,0,0"
                    HorizontalAlignment="Left"
                    LineStackingStrategy="MaxHeight"
                    Style="{ThemeResource BodyStrongTextBlockStyle}"
                    TextWrapping="Wrap">
                    <Hyperlink
                        xml:space="preserve"
                        NavigateUri="https://hub.codrex.dev/docs/"
                        UnderlineStyle="None">Documentation</Hyperlink>
                </TextBlock>

                <StackPanel
                    Margin="0,32,0,0"
                    Orientation="Horizontal"
                    Spacing="12">
                    <Button
                        x:Name="OobeGettingStartButton"
                        x:Uid="OobeGettingStartButton"
                        Click="SetupButton_Click"
                        Content="Start" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
