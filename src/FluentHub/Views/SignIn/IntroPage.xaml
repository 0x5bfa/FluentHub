<Page
    x:Class="FluentHub.Views.SignIn.IntroPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentHub.Views.SignIn"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:uc="using:FluentHub.UserControls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid x:Name="AppTitleBar" Background="Transparent">
            <uc:TitleBar Margin="12,0,0,0" />
        </Grid>
        <StackPanel
            Grid.Row="1"
            Width="400"
            Margin="0,-50,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                HorizontalAlignment="Center"
                Style="{ThemeResource TitleTextBlockStyle}"
                Text="Welcome to" />
            <StackPanel Margin="0,24" Spacing="12">
                <Image
                    Width="Auto"
                    Height="84"
                    HorizontalAlignment="Center"
                    Source="/Assets/AppTiles/StoreLogo.scale-200.png" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="32"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="FluentHub" />
            </StackPanel>
            <TextBlock
                HorizontalAlignment="Center"
                HorizontalTextAlignment="Center"
                Style="{ThemeResource BodyTextBlockStyle}"
                Text="To use all features, just you need to sign in first."
                TextWrapping="Wrap" />
            <StackPanel
                Margin="0,24,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    HorizontalAlignment="Center"
                    Click="SetupButton_Click"
                    Content="Start setup"
                    Style="{ThemeResource AccentButtonStyle}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
