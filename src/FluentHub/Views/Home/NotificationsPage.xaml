<Page
    x:Class="FluentHub.Views.Home.NotificationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:item="using:FluentHub.Models.Items"
    xmlns:local="using:FluentHub.Views.Home"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:vm="using:FluentHub.ViewModels.Home"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:NotificationViewModel x:Name="ViewModel" />
    </Page.DataContext>
    <Page.Resources>
        <Style
            x:Key="ContentBlockButtonStyle"
            BasedOn="{StaticResource DefaultButtonStyle}"
            TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource ExpanderHeaderBackground}" />
            <Setter Property="BorderBrush" Value="{ThemeResource ExpanderHeaderBorderBrush}" />
            <Setter Property="BorderThickness" Value="{ThemeResource ExpanderHeaderBorderThickness}" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="{StaticResource ExpanderContentPadding}" />
            <Setter Property="MinHeight" Value="{StaticResource ExpanderMinHeight}" />
            <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                Margin="4,0"
                Orientation="Horizontal"
                Spacing="8">
                <FontIcon FontSize="16" Glyph="&#xEA8F;" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    Style="{StaticResource BodyStrongTextBlockStyle}"
                    Text="Notifications" />
            </StackPanel>
            <muxc:ItemsRepeater
                Grid.Row="1"
                ItemsSource="{x:Bind ViewModel.Items}"
                Loaded="ItemsRepeater_Loaded">
                <DataTemplate x:DataType="item:NotificationListItem">
                    <Grid>
                        <StackPanel>
                            <Button
                                Margin="0,3,0,0"
                                Padding="16,12"
                                Style="{StaticResource ContentBlockButtonStyle}"
                                Tag="{x:Bind Tag}">
                                <Grid ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon
                                        Grid.Column="0"
                                        VerticalAlignment="Top"
                                        FontFamily="{StaticResource Octions}"
                                        FontSize="22"
                                        Foreground="#57ab5a"
                                        Glyph="{x:Bind SubjectStateIconGlyph}" />
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <TextBlock
                                                Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                                Style="{ThemeResource BodyTextBlockStyle}"
                                                Text="{x:Bind SubjectWithOwnerName}" />
                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{x:Bind FormattedNotifiedDate}" />
                                        </Grid>
                                        <StackPanel
                                            Grid.Row="1"
                                            HorizontalAlignment="Left"
                                            Orientation="Horizontal">
                                            <Border
                                                Name="UnreadIndicatorCircle"
                                                Width="10"
                                                Height="10"
                                                Margin="0,0,6,0"
                                                Background="#316dca"
                                                CornerRadius="5"
                                                Visibility="{x:Bind Unread}" />
                                            <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="{x:Bind SubjectTitle}" />
                                        </StackPanel>
                                        <StackPanel
                                            Grid.Row="2"
                                            Margin="0,6,0,0"
                                            HorizontalAlignment="Left"
                                            Orientation="Horizontal"
                                            Spacing="6">
                                            <Border
                                                Width="16"
                                                Height="16"
                                                Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                                CornerRadius="8">
                                                <Image
                                                    Width="16"
                                                    Height="16"
                                                    Source="{x:Bind LatestEventUserAvatar}" />
                                            </Border>
                                            <TextBlock
                                                Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                                Style="{ThemeResource BodyTextBlockStyle}"
                                                Text="{x:Bind FormattedNotifiedReason}" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </muxc:ItemsRepeater>
            <muxc:ProgressRing Grid.RowSpan="2" IsActive="{x:Bind ViewModel.IsActive, Mode=OneWay}" />
        </Grid>
    </ScrollViewer>
</Page>
