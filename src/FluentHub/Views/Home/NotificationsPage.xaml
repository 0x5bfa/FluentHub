<Page
    x:Class="FluentHub.Views.Home.NotificationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bbvm="using:FluentHub.ViewModels.UserControls.ButtonBlocks"
    xmlns:block="using:FluentHub.UserControls.ButtonBlocks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Margin="4,0" Orientation="Horizontal">
                <Grid>
                    <FontIcon
                        HorizontalAlignment="Left"
                        FontSize="16"
                        Glyph="&#xEA8F;" />
                    <muxc:InfoBadge
                        Margin="8,0,0,18"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        d:Opacity="1"
                        d:Value="5"
                        Opacity="{x:Bind ViewModel.UnreadCount, Mode=OneWay}"
                        Value="{x:Bind ViewModel.UnreadCount, Mode=OneWay}" />
                </Grid>
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    Style="{StaticResource BodyStrongTextBlockStyle}"
                    Text="Notifications" />
            </StackPanel>

            <muxc:InfoBar
                Title="Something went wrong"
                IsClosable="False" Grid.Row="1"
                IsOpen="{x:Bind ViewModel.RefreshNotificationsCommand.ExecutionTask.IsFaulted, Mode=OneWay}"
                Message="{x:Bind ViewModel.RefreshNotificationsCommand.ExecutionTask.Exception.InnerException.Message, Mode=OneWay}"
                Severity="Error">
                <muxc:InfoBar.ActionButton>
                    <HyperlinkButton Command="{x:Bind ViewModel.RefreshNotificationsCommand}" Content="Refresh" />
                </muxc:InfoBar.ActionButton>
            </muxc:InfoBar>

            <muxc:ItemsRepeater Grid.Row="1" ItemsSource="{x:Bind ViewModel.NotificationItems, Mode=OneWay}">
                <DataTemplate x:DataType="bbvm:NotificationButtonBlockViewModel">
                    <block:NotificationButtonBlock ViewModel="{x:Bind}" />
                </DataTemplate>
            </muxc:ItemsRepeater>
            <muxc:ProgressRing Grid.RowSpan="2" IsActive="{x:Bind ViewModel.RefreshNotificationsCommand.IsRunning, Mode=OneWay}" />
        </Grid>
    </ScrollViewer>
</Page>
