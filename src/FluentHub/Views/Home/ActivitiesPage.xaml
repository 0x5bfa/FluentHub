<Page
    x:Class="FluentHub.Views.Home.ActivitiesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:block="using:FluentHub.UserControls.Blocks"
    xmlns:bvm="using:FluentHub.ViewModels.UserControls.Blocks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                Margin="4,0"
                Orientation="Horizontal"
                Spacing="8">
                <FontIcon FontSize="16" Glyph="&#xECAD;" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    Style="{StaticResource BodyStrongTextBlockStyle}"
                    Text="Activities" />
            </StackPanel>
            <muxc:ItemsRepeater
                Grid.Row="1"
                Margin="0,8,0,0"
                ItemsSource="{x:Bind ViewModel.Activities, Mode=OneWay}">
                <DataTemplate x:DataType="bvm:ActivityBlockViewModel">
                    <Grid>
                        <block:ActivityBlock ViewModel="{x:Bind}" />
                    </Grid>
                </DataTemplate>
            </muxc:ItemsRepeater>
            <muxc:ProgressRing Grid.RowSpan="2" IsActive="{x:Bind ViewModel.RefreshActivitiesCommand.IsRunning, Mode=OneWay}" />
        </Grid>
    </ScrollViewer>
</Page>