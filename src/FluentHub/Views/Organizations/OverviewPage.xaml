<Page
    x:Class="FluentHub.Views.Organizations.OverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:item="using:FluentHub.Models.Items"
    xmlns:local="using:FluentHub.Views.Organizations"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:uc="using:FluentHub.UserControls.ButtonBlocks"
    xmlns:vm="using:FluentHub.ViewModels.Organizations"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:OverviewViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid
            x:Name="UserPinnedItemsBlock"
            Grid.Row="0"
            Margin="12,12,12,0"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                Margin="4,0"
                Orientation="Horizontal"
                Spacing="8">
                <FontIcon
                    FontFamily="{StaticResource Octions}"
                    FontSize="16"
                    Glyph="&#xEA3E;" />
                <TextBlock
                    FontSize="14"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="Pinned repositories" />
            </StackPanel>
            <ScrollViewer
                Grid.Row="1"
                HorizontalScrollBarVisibility="Hidden"
                VerticalScrollMode="Disabled">
                <muxc:ItemsRepeater ItemsSource="{x:Bind ViewModel.OrgPinnedItems}">
                    <muxc:ItemsRepeater.Layout>
                        <muxc:StackLayout Orientation="Horizontal" Spacing="8" />
                    </muxc:ItemsRepeater.Layout>
                    <DataTemplate x:DataType="item:RepoListItem">
                        <uc:RepoButtonBlock
                            x:Name="RepositoryBlock"
                            Width="250"
                            VerticalAlignment="Stretch"
                            DisplayStarButton="False"
                            RepositoryId="{x:Bind RepoId}" />
                    </DataTemplate>
                </muxc:ItemsRepeater>
            </ScrollViewer>
        </Grid>
        <Frame x:Name="OrgPageFrame" Grid.Row="1" />
        <TextBlock
            x:Name="NoOverviewTextBlock"
            Grid.RowSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="There is no overview."
            Visibility="Collapsed" />
    </Grid>
</Page>
