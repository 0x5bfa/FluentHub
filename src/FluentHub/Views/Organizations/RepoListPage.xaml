<Page
    x:Class="FluentHub.Views.Organizations.RepoListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:block="using:FluentHub.UserControls.ButtonBlocks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:item="using:FluentHub.Models.Items"
    xmlns:local="using:FluentHub.Views.Organizations"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:vm="using:FluentHub.ViewModels.Organizations"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:RepoListViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <ScrollViewer Margin="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                Margin="4,0"
                Orientation="Horizontal"
                Spacing="8">
                <FontIcon
                    FontFamily="{StaticResource Octions}"
                    FontSize="16"
                    Glyph="&#xEA52;" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    Style="{StaticResource BodyStrongTextBlockStyle}"
                    Text="Repositories" />
            </StackPanel>
            <muxc:ItemsRepeater
                Grid.Row="1"
                ItemsSource="{x:Bind ViewModel.Items}"
                Loaded="ItemsRepeater_Loaded">
                <DataTemplate x:DataType="item:RepoListItem">
                    <block:RepoButtonBlock
                        x:Name="RepositoryBlock"
                        DisplayDitails="True"
                        RepositoryId="{x:Bind RepoId}" />
                </DataTemplate>
            </muxc:ItemsRepeater>
            <muxc:ProgressRing Grid.RowSpan="2" IsActive="{Binding IsActive}" />
        </Grid>
    </ScrollViewer>
</Page>
