<ContentDialog
    x:Class="FluentHub.Dialogs.SetupDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:FluentHub.Helpers"
    xmlns:local="using:FluentHub.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:uc="using:FluentHub.UserControls"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <Grid MinHeight="300" RowSpacing="16">
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="56" />
        </Grid.RowDefinitions>

        <Grid x:Name="InfoGrid" Grid.Row="0" ColumnSpacing="28">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="IconColumn" Width="188" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Image x:Name="SetupIcon"
                   HorizontalAlignment="Stretch"
                   Source="/Assets/Privacy.png"
                   Width="128" />

            <Grid Grid.Column="1">
                <StackPanel>
                    <Grid>
                        <TextBlock x:Name="Header"
                           Padding="0,0,0,4"
                           Text="Authorize app"
                           Style="{StaticResource TitleTextBlockStyle}"/>
                        <Button
                            Click="CancelButton_Click"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Height="30" Width="30"
                            Padding="0">
                            <FontIcon Glyph="&#xe711;" FontSize="16"/>
                        </Button>
                    </Grid>

                    <StackPanel Padding="0,0,0,12">
                        <TextBlock
                            TextWrapping="Wrap"
                            Text="You can log in to GitHub in various ways. By authenticating, you can access more GitHub data and gain more experience."
                            Style="{ThemeResource BodyTextBlockStyle}"/>

                        <TextBlock
                            Margin="0,24,0,5"
                            Text="Login (Web authentication is recommended)"
                            Style="{ThemeResource BodyStrongTextBlockStyle}"/>

                        <muxc:InfoBar
                            x:Name="ShouldNotUseBasicAuthWarningInfoBar"
                            Title="Reccommand"
                            Message="You should get authorization with web authentication. If 2FA is enabled, basic authentication will fail."
                            Severity="Warning">
                            <muxc:InfoBar.IconSource>
                                <muxc:SymbolIconSource Symbol="Permissions" />
                            </muxc:InfoBar.IconSource>
                        </muxc:InfoBar>

                        <muxc:InfoBar
                            x:Name="ShouldNotUseAccessTokenAuthWarningInfoBar"
                            Title="Reccommand"
                            Message="You should get authorization with web authentication. If the access range is narrower than the access range required by this app, an exception may be thrown because it is a preview version."
                            Severity="Warning">
                            <muxc:InfoBar.IconSource>
                                <muxc:SymbolIconSource Symbol="Permissions" />
                            </muxc:InfoBar.IconSource>
                        </muxc:InfoBar>

                        <uc:SettingsBlockControl Title="Authentication type" Margin="0,3,0,0">
                            <ComboBox Width="224" x:Name="AuthOptionCombobox" SelectionChanged="AuthOptionCombobox_SelectionChanged"/>
                        </uc:SettingsBlockControl>

                        <Grid>
                            <StackPanel x:Name="BasicAuth" Spacing="3" Margin="0,3,0,0" Visibility="Collapsed">
                                <uc:SettingsBlockControl Title="User name">
                                    <TextBox x:Name="UsernameTextBox" Width="224" TextChanged="UsernameTextBox_TextChanged"/>
                                </uc:SettingsBlockControl>
                                <uc:SettingsBlockControl Title="password">
                                    <PasswordBox x:Name="PaddwordTextBox" Width="224" PasswordChanged="PaddwordTextBox_PasswordChanged"/>
                                </uc:SettingsBlockControl>
                            </StackPanel>

                            <StackPanel x:Name="OAuthTokenAuth" Spacing="3" Margin="0,3,0,0" Visibility="Collapsed">
                                <uc:SettingsBlockControl Title="OAuth token" Description="Format: ghp_[A-Z|0-9|a-z]{36}">
                                    <TextBox x:Name="TokenTextBox" Width="224" TextChanged="TokenTextBox_TextChanged"/>
                                </uc:SettingsBlockControl>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid
            x:Name="ControlGrid"
            Grid.Row="1"
            Background="{ThemeResource ContentDialogBackground}"
            ColumnSpacing="8"
            Height="80"
            Margin="-24"
            Padding="24"
            VerticalAlignment="Bottom">
            <Button
                x:Name="ContinueButton"
                Grid.Column="1"
                HorizontalAlignment="Right"
                MinWidth="240"
                Style="{StaticResource AccentButtonStyle}"
                Click="ContinueButton_Click"
                Content="Continue"
                HorizontalContentAlignment="Center">
            </Button>
        </Grid>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Margin="16,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image Height="84" Source="/Assets/Privacy.png" />
            <StackPanel
                Grid.Column="1"
                Margin="32,0,0,0"
                Spacing="6">
                <TextBlock
                    x:Name="Header"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="{helpers:ResourceString Name=AuthFluentHub}" />
                <TextBlock
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Text="{helpers:ResourceString Name=HowToSignIn}"
                    TextWrapping="Wrap" />
            </StackPanel>
            <Button
                Grid.Column="2"
                Width="36"
                Height="36"
                Padding="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="Transparent"
                Click="CancelButton_Click"
                Style="{StaticResource ClearButtonStyle}">
                <FontIcon FontSize="16" Glyph="&#xe711;" />
            </Button>
        </Grid>
        <muxc:InfoBar
            Title="{helpers:ResourceString Name=OnlyWebAuth}"
            Grid.Row="1"
            IsClosable="False"
            IsOpen="True"
            Message="{helpers:ResourceString Name=MoreAuthOptionsComingSoon}"
            Severity="Success">
            <muxc:InfoBar.IconSource>
                <muxc:SymbolIconSource Symbol="Permissions" />
            </muxc:InfoBar.IconSource>
        </muxc:InfoBar>
        <Button
            Grid.Row="2"
            MinWidth="120"
            HorizontalAlignment="Right"
            Click="ContinueButton_Click"
            Content="{helpers:ResourceString Name=OpenWithBrowser}"
            Style="{StaticResource AccentButtonStyle}" />
    </Grid>
</ContentDialog>
