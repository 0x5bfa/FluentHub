<UserControl
    x:Class="FluentHub.UserControls.Repository.LatestCommitBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentHub.UserControls.Repository"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:FluentHub.UserControls"
    xmlns:vm="using:FluentHub.ViewModels.UserControls.Repository"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:LatestCommitBlockViewModel />
    </UserControl.DataContext>

    <Grid
        Grid.Row="1"
        Height="48"
        Margin="0,8,0,0"
        Padding="12,0"
        VerticalAlignment="Top"
        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
        BorderThickness="1"
        CornerRadius="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
            x:Name="RepoLatestCommitAuthorName"
            Grid.Column="1"
            Margin="12,0,0,0"
            VerticalAlignment="Center"
            Style="{StaticResource BodyStrongTextBlockStyle}"
            Text="{Binding AuthorLoginName}" />
        <TextBlock
            x:Name="RepoLatestCommitMessage"
            Grid.Column="2"
            Margin="4,0,0,0"
            VerticalAlignment="Center"
            Style="{StaticResource BodyTextBlockStyle}"
            Text="{Binding CommitMessage}"
            TextWrapping="NoWrap" />
        <TextBlock
            x:Name="RepoLatestCommitSha"
            Grid.Column="4"
            VerticalAlignment="Center"
            FontFamily="consolas"
            Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{Binding CommitSha}" />
        <TextBlock
            x:Name="RepoLatestCommitUpdatedAtHumanized"
            Grid.Column="5"
            Margin="4,0,0,0"
            VerticalAlignment="Center"
            Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
            Style="{StaticResource BodyTextBlockStyle}"
            Text="{Binding CommitUpdatedAtHumanized}" />
        <StackPanel Grid.Column="6" Orientation="Horizontal">
            <Button Style="{StaticResource LinkLikeButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <FontIcon
                        Margin="12,0,0,0"
                        FontFamily="{StaticResource Octions}"
                        FontSize="18"
                        Glyph="&#xE9D3;" />
                    <TextBlock
                        x:Name="RepoCommitsCount"
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyStrongTextBlockStyle}"
                        Text="{Binding CommitsCount}" />
                    <TextBlock
                        Grid.Column="5"
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="commits" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
