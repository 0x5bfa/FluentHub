<UserControl
    x:Class="FluentHub.UserControls.Labels.StateLabel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentHub.UserControls.Labels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Left">
        <Grid
            Width="Auto"
            Height="28"
            HorizontalAlignment="Left"
            CornerRadius="4">
            <Grid
                x:Name="LabelBackground"
                Background="{x:Bind LabelBackground.Background, Mode=OneWay}"
                Opacity="0.10" />
            <Grid
                x:Name="LabelBorder"
                BorderBrush="{x:Bind LabelBackground.Background, Mode=OneWay}"
                BorderThickness="1"
                CornerRadius="4"
                Opacity="0.3" />
            <StackPanel
                Padding="12,0"
                Orientation="Horizontal"
                Spacing="4">
                <FontIcon
                    x:Name="StateLabelFont"
                    FontFamily="{StaticResource Octions}"
                    FontSize="14"
                    Foreground="{x:Bind LabelBackground.Background, Mode=OneWay}" />
                <TextBlock
                    x:Name="StateLabelTextBlock"
                    VerticalAlignment="Center"
                    Foreground="{x:Bind LabelBackground.Background, Mode=OneWay}"
                    Style="{StaticResource BodyStrongTextBlockStyle}" />
            </StackPanel>
        </Grid>
    </Grid>

</UserControl>
