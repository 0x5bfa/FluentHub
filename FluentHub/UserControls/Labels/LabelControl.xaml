<UserControl
    x:Class="FluentHub.UserControls.Labels.LabelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentHub.UserControls.Labels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Left">
        <Grid
            Width="Auto"
            Height="20"
            HorizontalAlignment="Left"
            CornerRadius="10">
            <Grid
                x:Name="LabelBackground"
                CornerRadius="10"
                Opacity="0.18" />
            <Grid
                x:Name="LabelBorder"
                Background="{x:Bind LabelBackground.Background, Mode=OneWay}"
                BorderBrush="{x:Bind LabelBackground.Background, Mode=OneWay}"
                BorderThickness="0.5"
                CornerRadius="10"
                Opacity="0.3" />
            <TextBlock
                x:Name="LabelTextBlock"
                Margin="7,0"
                VerticalAlignment="Center"
                FontWeight="SemiBold"
                Foreground="{x:Bind LabelBackground.Background, Mode=OneWay}"
                Style="{StaticResource CaptionTextBlockStyle}" />
        </Grid>
    </Grid>
</UserControl>
