<Page
    x:Class="FluentHub.Views.Home.NotificationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:item="using:FluentHub.Models.Items"
    xmlns:local="using:FluentHub.Views.Home"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:vm="using:FluentHub.ViewModels.Home"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:NotificationViewModel x:Name="ViewModel" />
    </Page.DataContext>
    <Page.Resources>
        <Style
            x:Key="ContentBlockButtonStyle"
            BasedOn="{StaticResource DefaultButtonStyle}"
            TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource ExpanderHeaderBackground}" />
            <Setter Property="BorderBrush" Value="{ThemeResource ExpanderHeaderBorderBrush}" />
            <Setter Property="BorderThickness" Value="{ThemeResource ExpanderHeaderBorderThickness}" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="{StaticResource ExpanderContentPadding}" />
            <Setter Property="MinHeight" Value="{StaticResource ExpanderMinHeight}" />
            <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Margin="20,20,20,12">
            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Notifications" />
        </Grid>
        <Grid
            Grid.Row="1"
            Margin="20,6"
            ColumnSpacing="6"
            RowSpacing="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="256" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid>
                <StackPanel Spacing="6">
                    <TextBlock FontWeight="SemiBold" Text="Find a notification" />
                    <AutoSuggestBox Grid.Row="1" PlaceholderText="Find a notification..." />
                </StackPanel>
            </Grid>
            <ScrollViewer
                Grid.Column="1"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollMode="Disabled">
                <Grid ColumnSpacing="6" RowSpacing="6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        FontWeight="SemiBold"
                        Text="Unread" />
                    <ToggleButton
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Unread" />
                    <TextBlock
                        Grid.Column="1"
                        FontWeight="SemiBold"
                        Text="Filter" />
                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="130"
                        PlaceholderText="Filter">
                        <x:String>Inbox</x:String>
                        <x:String>Saved</x:String>
                        <x:String>Done</x:String>
                    </ComboBox>
                    <TextBlock
                        Grid.Column="2"
                        FontWeight="SemiBold"
                        Text="Group by:" />
                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="2"
                        Width="130"
                        HorizontalContentAlignment="Left"
                        PlaceholderText="Group">
                        <x:String>Date</x:String>
                        <x:String>Repository</x:String>
                    </ComboBox>
                </Grid>
            </ScrollViewer>
        </Grid>
        <ScrollViewer Grid.Row="2" Margin="0,6,0,0">
            <Grid Margin="20,0,20,20">
                <muxc:ProgressRing x:Name="loadingRing" IsActive="{Binding IsActive}" />
                <Border>
                    <muxc:ItemsRepeater ItemsSource="{x:Bind ViewModel.Items}" Loaded="ItemsRepeater_Loaded">
                        <DataTemplate x:DataType="item:NotificationListItem">
                            <Grid>
                                <StackPanel>
                                    <Button
                                        Margin="0,3,0,0"
                                        Padding="16,12"
                                        Style="{StaticResource ContentBlockButtonStyle}"
                                        Tag="{x:Bind Tag}">
                                        <Grid ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <FontIcon
                                                Grid.Column="0"
                                                VerticalAlignment="Top"
                                                FontFamily="{StaticResource Octions}"
                                                FontSize="22"
                                                Foreground="#57ab5a"
                                                Glyph="{x:Bind SubjectStateIconGlyph}" />
                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <TextBlock
                                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                                        Style="{ThemeResource BodyTextBlockStyle}"
                                                        Text="{x:Bind SubjectWithOwnerName}" />
                                                    <TextBlock
                                                        HorizontalAlignment="Right"
                                                        Style="{StaticResource BodyTextBlockStyle}"
                                                        Text="{x:Bind FormattedNotifiedDate}" />
                                                </Grid>
                                                <StackPanel
                                                    Grid.Row="1"
                                                    HorizontalAlignment="Left"
                                                    Orientation="Horizontal">
                                                    <Border
                                                        Name="UnreadIndicatorCircle"
                                                        Width="10"
                                                        Height="10"
                                                        Margin="0,0,6,0"
                                                        Background="#316dca"
                                                        CornerRadius="5"
                                                        Visibility="{x:Bind Unread}" />
                                                    <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="{x:Bind SubjectTitle}" />
                                                </StackPanel>
                                                <StackPanel
                                                    Grid.Row="2"
                                                    Margin="0,6,0,0"
                                                    HorizontalAlignment="Left"
                                                    Orientation="Horizontal"
                                                    Spacing="6">
                                                    <Border
                                                        Width="16"
                                                        Height="16"
                                                        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                                        CornerRadius="8">
                                                        <Image
                                                            Width="16"
                                                            Height="16"
                                                            Source="{x:Bind LatestEventUserAvatar}" />
                                                    </Border>
                                                    <TextBlock
                                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                                        Style="{ThemeResource BodyTextBlockStyle}"
                                                        Text="{x:Bind FormattedNotifiedReason}" />
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </muxc:ItemsRepeater>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
