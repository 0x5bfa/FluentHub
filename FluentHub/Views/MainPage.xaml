<Page
    x:Class="FluentHub.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentHub"
    xmlns:uc="using:FluentHub.UserControls"
    xmlns:vm="using:FluentHub.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Page.DataContext>
        <vm:MainPageViewModel x:Name="ViewModel"/>
    </Page.DataContext>
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <SolidColorBrush x:Key="NavigationViewContentGridBorderBrush" Color="Transparent" />
                    <CornerRadius x:Key="NavigationViewContentGridCornerRadius">0</CornerRadius>
                </ResourceDictionary>
                <ResourceDictionary Source="/ResourceDictionaries/TabView_themeresources.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/TabViewItem_shared.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="42"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0"/>
            </Grid.ColumnDefinitions>
            <Grid
                x:Name="DragArea"
                Height="50"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                VerticalAlignment="Top"
                Background="Transparent"
                HorizontalAlignment="Stretch"
                Loaded="DragArea_Loaded"/>
            <uc:CustomTabView Grid.Column="0"/>
        </Grid>
        <Grid Grid.Row="1" Padding="8,0,8,8" ColumnSpacing="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <Button
                        Width="36"
                        Height="36"
                        Background="Transparent"
                        ToolTipService.ToolTip="Back"
                        IsEnabled="False"
                        Style="{StaticResource ClearButtonStyle}">
                        <FontIcon FontSize="14" Glyph="&#xE72B;" />
                    </Button>
                    <Button
                        Width="36"
                        Height="36"
                        Background="Transparent"
                        ToolTipService.ToolTip="Forward"
                        IsEnabled="False"
                        Style="{StaticResource ClearButtonStyle}">
                        <FontIcon FontSize="14" Glyph="&#xE72A;" />
                    </Button>
                    <Button
                        Width="36"
                        Height="36"
                        Background="Transparent"
                        ToolTipService.ToolTip="Refresh"
                        IsEnabled="False"
                        Style="{StaticResource ClearButtonStyle}">
                        <FontIcon FontSize="14" Glyph="&#xE72C;" />
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <TextBox
                    PlaceholderText="Find code, projects, and people on GitHub:"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"/>
            </Grid>
            <Grid Grid.Column="2">
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <Button
                        x:Name="NotificationsButton"
                        Width="36"
                        Height="36"
                        ToolTipService.ToolTip="Notifications"
                        Padding="0"
                        Background="Transparent"
                        Style="{StaticResource ClearButtonStyle}">
                        <Grid>
                            <FontIcon FontSize="16" Glyph="&#xEA8F;" />
                            <muxc:InfoBadge
                                x:Name="NotificationBadge"
                                Margin="0,-8,-8,0"
                                Value="0"
                                Visibility="Collapsed"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"/>
                        </Grid>
                    </Button>
                    <Button
                        x:Name="ProfileButton"
                        Width="36"
                        Height="36"
                        ToolTipService.ToolTip="Profile"
                        Background="Transparent"
                        Style="{StaticResource ClearButtonStyle}">
                        <FontIcon FontSize="16" Glyph="&#xE77B;" />
                    </Button>
                    <Button
                        x:Name="SettingsButton"
                        Width="36"
                        Height="36"
                        Style="{StaticResource ClearButtonStyle}"
                        CornerRadius="8"
                        ToolTipService.ToolTip="App settings"
                        Background="Transparent"
>
                        <FontIcon FontSize="16" Glyph="&#xE115;" />
                    </Button>
                </StackPanel>
            </Grid>
            <Border
                Margin="-8,0,-8,-9"
                Grid.ColumnSpan="3"
                Height="1"
                BorderBrush="{ThemeResource ControlStrokeColorDefault}"
                BorderThickness="1"
                VerticalAlignment="Bottom"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <muxc:NavigationView IsBackButtonVisible="Collapsed" IsPaneToggleButtonVisible="False" AlwaysShowHeader="True" IsSettingsVisible="False" IsPaneOpen="True" OpenPaneLength="250">

                <muxc:NavigationView.MenuItems>

                    <muxc:NavigationViewItemHeader Content="Profile"/>
                    <muxc:NavigationViewItem Tag="Profile" Content="Profile" IsSelected="True">
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xe77b;"/>
                        </muxc:NavigationViewItem.Icon>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem Tag="Notifications" Content="Notifications">
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xea8f;"/>
                        </muxc:NavigationViewItem.Icon>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem Tag="Activities" Content="Activities">
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xecad;"/>
                        </muxc:NavigationViewItem.Icon>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItemHeader Content="My Work"/>
                    <muxc:NavigationViewItem Tag="Issues">
                        <muxc:NavigationViewItem.Content>
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <Border Background="#40d563" Width="24" Height="24" CornerRadius="4">
                                    <FontIcon FontFamily="octions" Glyph="&#xE9EA;" FontSize="16"/>
                                </Border>
                                <TextBlock Text="Issues" VerticalAlignment="Center"/>
                            </StackPanel>
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem Tag="PullRequests">
                        <muxc:NavigationViewItem.Content>
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <Border Background="#2e8ffe" Width="24" Height="24" CornerRadius="4">
                                    <FontIcon FontFamily="octions" Glyph="&#xE9BF;" FontSize="16"/>
                                </Border>
                                <TextBlock Text="Pull Requests" VerticalAlignment="Center"/>
                            </StackPanel>
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem Tag="Discussions">
                        <muxc:NavigationViewItem.Content>
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <Border Background="#7548c7" Width="24" Height="24" CornerRadius="4">
                                    <FontIcon FontFamily="octions" Glyph="&#xE95D;" FontSize="16"/>
                                </Border>
                                <TextBlock Text="Discussions" VerticalAlignment="Center"/>
                            </StackPanel>
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem Tag="Repositories">
                        <muxc:NavigationViewItem.Content>
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <Border Background="#41434e" Width="24" Height="24" CornerRadius="4">
                                    <FontIcon FontFamily="octions" Glyph="&#xEA52;" FontSize="16"/>
                                </Border>
                                <TextBlock Text="Repositories" VerticalAlignment="Center"/>
                            </StackPanel>
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem Tag="Organizations">
                        <muxc:NavigationViewItem.Content>
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <Border Background="#fe8a38" Width="24" Height="24" CornerRadius="4">
                                    <FontIcon FontFamily="octions" Glyph="&#xEA27;" FontSize="16"/>
                                </Border>
                                <TextBlock Text="Organizations" VerticalAlignment="Center"/>
                            </StackPanel>
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem Tag="Starred">
                        <muxc:NavigationViewItem.Content>
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <Border Background="#fecb1a" Width="24" Height="24" CornerRadius="4">
                                    <FontIcon FontFamily="octions" Glyph="&#xEA94;" FontSize="16"/>
                                </Border>
                                <TextBlock Text="Starred" VerticalAlignment="Center"/>
                            </StackPanel>
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>

                    <muxc:NavigationViewItemHeader Content="Favorites"/>

                    <muxc:NavigationViewItemHeader Content="Explorer"/>

                </muxc:NavigationView.MenuItems>
                <muxc:NavigationView.Content>
                    <Frame Grid.Column="1" x:Name="MainFrame" Background="{ThemeResource LayerFillColorDefaultBrush}"/>
                </muxc:NavigationView.Content>
            </muxc:NavigationView>
        </Grid>
    </Grid>
</Page>
