<Page
    x:Class="FluentHub.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentHub"
    xmlns:uc="using:FluentHub.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionaries/ToolbarButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="42"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="DragArea" x:Load="True" Height="50" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
        <uc:CustomTabView />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0"  Padding="8,0,8,8" ColumnSpacing="4">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <Button Width="36"
                    Height="32" Background="Transparent" Style="{ThemeResource ToolBarButtonStyle}">
                        <FontIcon FontSize="14" Glyph="&#xE72B;" />
                    </Button>
                    <Button Width="36"
                    Height="32" Background="Transparent" Style="{ThemeResource ToolBarButtonStyle}">
                        <FontIcon FontSize="14" Glyph="&#xE72A;" />
                    </Button>
                    <Button Width="36"
                    Height="32" Background="Transparent" Style="{ThemeResource ToolBarButtonStyle}">
                        <FontIcon FontSize="14" Glyph="&#xE72A;" />
                    </Button>
                    <Button Width="36"
                    Height="32" Background="Transparent" Style="{ThemeResource ToolBarButtonStyle}">
                        <FontIcon FontSize="14" Glyph="&#xE72C;" />
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <AutoSuggestBox HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
            </Grid>
            <Border Grid.ColumnSpan="2" Height="0.5" BorderBrush="{ThemeResource ControlStrokeColorDefault}" BorderThickness="0.5" VerticalAlignment="Bottom"/>

        </Grid>
        <Frame Grid.Row="2" x:Name="ContentFrame" Background="{ThemeResource LayerFillColorDefaultBrush}">
        </Frame>
    </Grid>
</Page>
