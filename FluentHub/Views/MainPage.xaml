<Page
    x:Class="FluentHub.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentHub"
    xmlns:vm="using:FluentHub.ViewModels"
    xmlns:uc="using:FluentHub.UserControls"
    xmlns:datamodel="using:FluentHub.DataModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionaries/TabView_themeresources.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/TabViewItem_shared.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/ToolbarButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="42"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="DragArea" Height="50" VerticalAlignment="Top" HorizontalAlignment="Stretch" Loaded="DragArea_Loaded"/>
            <muxc:TabView
                x:Name="MainTabView"
                Margin="4,0"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Left"
                Background="Transparent"
                AddTabButtonClick="MainTabView_AddTabButtonClick"
                TabCloseRequested="MainTabView_TabCloseRequested"
                SelectionChanged="MainTabView_SelectionChanged"
                TabItemsSource="{x:Bind vm:MainPageViewModel.MainTabItems, Mode=OneWay}">
                <muxc:TabView.TabItemTemplate>
                    <DataTemplate x:DataType="datamodel:TabItem">
                        <muxc:TabViewItem
                        Padding="2,0,2,2"
                        CornerRadius="4"
                        Style="{ThemeResource TabViewItemStyle}"
                        IconSource="{x:Bind IconSource, Mode=OneWay}"
                        Header="{x:Bind Header, Mode=OneWay}"/>
                    </DataTemplate>
                </muxc:TabView.TabItemTemplate>
            </muxc:TabView>
        </Grid>
        <Grid Grid.Row="1" Padding="8,0,8,8" ColumnSpacing="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <Button Width="36" Height="32" Background="Transparent" Style="{ThemeResource ToolBarButtonStyle}" IsEnabled="False">
                        <FontIcon FontSize="14" Glyph="&#xE72B;" />
                    </Button>
                    <Button Width="36" Height="32" Background="Transparent" Style="{ThemeResource ToolBarButtonStyle}" IsEnabled="False">
                        <FontIcon FontSize="14" Glyph="&#xE72A;" />
                    </Button>
                    <Button Width="36" Height="32" Background="Transparent" Style="{ThemeResource ToolBarButtonStyle}" IsEnabled="False">
                        <FontIcon FontSize="14" Glyph="&#xE74A;" />
                    </Button>
                    <Button Width="36" Height="32" Background="Transparent" Style="{ThemeResource ToolBarButtonStyle}" IsEnabled="False">
                        <FontIcon FontSize="14" Glyph="&#xE72C;" />
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <AutoSuggestBox
                    PlaceholderText="Type GitHub URL"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Text="{x:Bind vm.FullUrl, Mode=OneWay}"/>
            </Grid>
            <Grid Grid.Column="2">
                <Button
                    x:Name="SettingsButton"
                    Width="36"
                    Height="32"
                    AccessKey="I"
                    ToolTipService.ToolTip="App settings"
                    Background="Transparent"
                    Style="{StaticResource ToolBarButtonStyle}">
                    <FontIcon FontSize="14" Glyph="&#xE115;" />
                </Button>
            </Grid>
            <Border Margin="-8,0,-8,-8"  Grid.ColumnSpan="3" Height="0.5" BorderBrush="{ThemeResource ControlStrokeColorDefault}" BorderThickness="0.5" VerticalAlignment="Bottom"/>
        </Grid>
        <Frame Grid.Row="2" x:Name="ContentFrame" Background="{ThemeResource LayerFillColorDefaultBrush}"/>
    </Grid>
</Page>
