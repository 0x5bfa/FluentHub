<Page
    x:Class="FluentHub.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentHub"
    xmlns:uc="using:FluentHub.UserControls"
    xmlns:vm="using:FluentHub.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Page.DataContext>
        <vm:MainPageViewModel x:Name="ViewModel"/>
    </Page.DataContext>
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <SolidColorBrush x:Key="NavigationViewContentGridBorderBrush" Color="Transparent" />
                </ResourceDictionary>
                <ResourceDictionary Source="/ResourceDictionaries/TabView_themeresources.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/TabViewItem_shared.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="42"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0"/>
            </Grid.ColumnDefinitions>
            <Grid
                x:Name="DragArea"
                Height="50"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                VerticalAlignment="Top"
                Background="Transparent"
                HorizontalAlignment="Stretch"
                Loaded="DragArea_Loaded"/>
            <uc:CustomTabView Grid.Column="0"/>
        </Grid>
        <Grid Grid.Row="1" Padding="8,0,8,8" ColumnSpacing="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <Button
                        Width="36"
                        Height="36"
                        Background="Transparent"
                        ToolTipService.ToolTip="Back"
                        IsEnabled="False"
                        Style="{StaticResource ClearButtonStyle}">
                        <FontIcon FontSize="14" Glyph="&#xE72B;" />
                    </Button>
                    <Button
                        Width="36"
                        Height="36"
                        Background="Transparent"
                        ToolTipService.ToolTip="Forward"
                        IsEnabled="False"
                        Style="{StaticResource ClearButtonStyle}">
                        <FontIcon FontSize="14" Glyph="&#xE72A;" />
                    </Button>
                    <Button
                        Width="36"
                        Height="36"
                        Background="Transparent"
                        ToolTipService.ToolTip="Refresh"
                        IsEnabled="False"
                        Style="{StaticResource ClearButtonStyle}">
                        <FontIcon FontSize="14" Glyph="&#xE72C;" />
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <TextBox
                    PlaceholderText="Find code, projects, and people on GitHub:"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"/>
            </Grid>
            <Grid Grid.Column="2">
                <StackPanel Orientation="Horizontal" Spacing="2">
                    <Button
                        x:Name="NotificationsButton"
                        Width="36"
                        Height="36"
                        ToolTipService.ToolTip="Notifications"
                        Padding="0"
                        Background="Transparent"
                        Style="{StaticResource ClearButtonStyle}">
                        <Grid>
                            <FontIcon FontSize="16" Glyph="&#xEA8F;" />
                            <muxc:InfoBadge
                                x:Name="NotificationBadge"
                                Margin="0,-8,-8,0"
                                Value="0"
                                Visibility="Collapsed"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"/>
                        </Grid>
                    </Button>
                    <Button
                        x:Name="ProfileButton"
                        Width="36"
                        Height="36"
                        ToolTipService.ToolTip="Profile"
                        Background="Transparent"
                        Style="{StaticResource ClearButtonStyle}">
                        <FontIcon FontSize="16" Glyph="&#xE77B;" />
                    </Button>
                    <Button
                        x:Name="SettingsButton"
                        Width="36"
                        Height="36"
                        ToolTipService.ToolTip="App settings"
                        Background="Transparent"
                        Style="{StaticResource ClearButtonStyle}">
                        <FontIcon FontSize="16" Glyph="&#xE115;" />
                    </Button>
                </StackPanel>
            </Grid>
            <Border
                Margin="-8,0,-8,-8"
                Grid.ColumnSpan="3"
                Height="0.5"
                BorderBrush="{ThemeResource ControlStrokeColorDefault}"
                BorderThickness="0.5"
                VerticalAlignment="Bottom"/>
        </Grid>
        <Frame Grid.Row="2" x:Name="MainFrame" Background="{ThemeResource LayerFillColorDefaultBrush}"/>
    </Grid>
</Page>
