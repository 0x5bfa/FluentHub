<Page
    x:Class="FluentHub.Views.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:FluentHub.Helpers"
    xmlns:local="using:FluentHub.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border
            x:Name="AppTitleBar"
            Height="48"
            Margin="16,0,0,0"
            VerticalAlignment="Top"
            Background="Transparent"
            Canvas.ZIndex="1"
            IsHitTestVisible="True">
            <StackPanel Orientation="Horizontal">
                <Image
                    x:Name="AppFontIcon"
                    Width="24"
                    Height="24"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Source="/Assets/AppTiles/Square44x44Logo.png" />
                <TextBlock
                    x:Name="AppTitle"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="FluentHub " />
                <TextBlock
                    x:Name="PreviewTitle"
                    Margin="4,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="11"
                    Foreground="{StaticResource TextFillColorSecondaryBrush}"
                    Text="PREVIEW" />
            </StackPanel>
        </Border>
        <StackPanel
            Grid.Row="1"
            Width="400"
            Margin="0,-50,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                HorizontalAlignment="Center"
                Style="{ThemeResource TitleTextBlockStyle}"
                Text="{helpers:ResourceString Name=WelcomeTo}" />
            <StackPanel Margin="0,24" Spacing="12">
                <Image
                    Width="Auto"
                    Height="84"
                    HorizontalAlignment="Center"
                    Source="/Assets/AppTiles/StoreLogo.scale-150.png" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="32"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="FluentHub" />
            </StackPanel>
            <TextBlock
                HorizontalAlignment="Center"
                HorizontalTextAlignment="Center"
                Style="{ThemeResource BodyTextBlockStyle}"
                Text="{helpers:ResourceString Name=GladText}"
                TextWrapping="Wrap" />
            <StackPanel
                Margin="0,24,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    HorizontalAlignment="Center"
                    Click="SetupButton_Click"
                    Content="{helpers:ResourceString Name=StartSetup}"
                    Style="{ThemeResource AccentButtonStyle}" />
                <muxc:ProgressRing
                    x:Name="AuthProgressRing"
                    Width="24"
                    Height="24"
                    Margin="12,0,0,0"
                    VerticalAlignment="Stretch"
                    Visibility="Collapsed" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
