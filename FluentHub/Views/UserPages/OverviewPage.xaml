<Page
    x:Class="FluentHub.Views.UserPages.OverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentHub.Views.UserPages"
    xmlns:uc="using:FluentHub.UserControls.Block"
    xmlns:item="using:FluentHub.Models.Items"
    xmlns:vm="using:FluentHub.ViewModels.UserPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:OverviewViewModel x:Name="ViewModel"/>
    </Page.DataContext>
    <Page.Resources>
        <Style x:Key="PinnedItemBlockButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Background" Value="{ThemeResource ExpanderHeaderBackground}" />
            <Setter Property="BorderBrush" Value="{ThemeResource ExpanderHeaderBorderBrush}" />
            <Setter Property="BorderThickness" Value="{ThemeResource ExpanderHeaderBorderThickness}" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="{StaticResource ExpanderContentPadding}" />
            <Setter Property="MinHeight" Value="{StaticResource ExpanderMinHeight}" />
            <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid
                RowSpacing="6"
                x:Name="UserSpecialReadmeBlock"
                Margin="0,0,0,6"
                Visibility="Collapsed"
                Height="400"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontFamily="{StaticResource Octions}" Glyph="&#xEA38;" FontSize="16"/>
                        <TextBlock Text="README" Style="{StaticResource SubtitleTextBlockStyle}" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                    <HyperlinkButton
                        x:Name="ReadMeLink"
                        FontFamily="Cascadia Code"
                        Padding="4"
                        HorizontalAlignment="Right"
                        FontSize="12"
                        Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
                        VerticalAlignment="Center"/>
                </Grid>
                <Grid
                    Grid.Row="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <WebView
                        x:Name="UserSpecialReadmeWebView"
                        Loaded="UserSpecialReadmeWebView_Loaded"
                        DefaultBackgroundColor="Transparent"
                        NavigationStarting="UserSpecialReadmeWebView_NavigationStarting"
                        CanBeScrollAnchor="True"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" RowSpacing="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon FontFamily="{StaticResource Octions}" Glyph="&#xEA3E;" FontSize="16"/>
                    <TextBlock Text="Pinned" Style="{StaticResource SubtitleTextBlockStyle}" FontSize="14"/>
                </StackPanel>
                <ScrollViewer VerticalScrollMode="Disabled" HorizontalScrollBarVisibility="Hidden" Grid.Row="1">
                    <muxc:ItemsRepeater ItemsSource="{x:Bind ViewModel.Items}" Loaded="ItemsRepeater_Loaded">
                        <muxc:ItemsRepeater.Layout>
                            <muxc:StackLayout Orientation="Horizontal" Spacing="8"/>
                        </muxc:ItemsRepeater.Layout>
                        <DataTemplate x:DataType="item:RepoListItem">
                            <uc:RepoBlock x:Name="RepositoryBlock" RepositoryId="{x:Bind RepoId}" Width="250" VerticalAlignment="Stretch"/>
                        </DataTemplate>
                    </muxc:ItemsRepeater>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Page>
