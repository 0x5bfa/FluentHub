<Page
    x:Class="FluentHub.Views.UserPages.NotificationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentHub.Views.UserPages"
    xmlns:item="using:FluentHub.Models.Items"
    xmlns:vm="using:FluentHub.ViewModels.UserPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:NotificationViewModel x:Name="ViewModel"/>
    </Page.DataContext>
    <Page.Resources>
        <Style x:Key="ContentBlockButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Background" Value="{ThemeResource ExpanderHeaderBackground}" />
            <Setter Property="BorderBrush" Value="{ThemeResource ExpanderHeaderBorderBrush}" />
            <Setter Property="BorderThickness" Value="{ThemeResource ExpanderHeaderBorderThickness}" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="{StaticResource ExpanderContentPadding}" />
            <Setter Property="MinHeight" Value="{StaticResource ExpanderMinHeight}" />
            <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Margin="20,20,20,12">
            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Notifications"/>
        </Grid>
        <Grid Grid.Row="1" RowSpacing="6" ColumnSpacing="6" Margin="20,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="256"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <StackPanel Spacing="6">
                    <TextBlock Text="Find a notification" FontWeight="SemiBold"/>
                    <AutoSuggestBox Grid.Row="1" PlaceholderText="Find a notification..."/>
                </StackPanel>
            </Grid>
            <ScrollViewer VerticalScrollMode="Disabled" HorizontalScrollBarVisibility="Auto" Grid.Column="1">
                <Grid RowSpacing="6" ColumnSpacing="6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Unread" FontWeight="SemiBold"/>
                    <ToggleButton Grid.Row="1" Grid.Column="0"  Content="Unread"/>
                    <TextBlock Grid.Column="1" Text="Filter" FontWeight="SemiBold"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" Width="130" PlaceholderText="Filter">
                        <x:String>Inbox</x:String>
                        <x:String>Saved</x:String>
                        <x:String>Done</x:String>
                    </ComboBox>
                    <TextBlock Grid.Column="2" Text="Group by:" FontWeight="SemiBold"/>
                    <ComboBox Grid.Row="1" Grid.Column="2" Width="130" PlaceholderText="Group" HorizontalContentAlignment="Left">
                        <x:String>Date</x:String>
                        <x:String>Repository</x:String>
                    </ComboBox>
                </Grid>
            </ScrollViewer>
        </Grid>
        <ScrollViewer Grid.Row="2" Margin="0,6,0,0">
            <Grid Margin="20,0,20,20">
                <muxc:ProgressRing x:Name="loadingRing" IsActive="{Binding IsActive}" />
                <Border>
                    <muxc:ItemsRepeater ItemsSource="{x:Bind ViewModel.Items}" Loaded="ItemsRepeater_Loaded">
                        <DataTemplate x:DataType="item:NotificationListItem">
                            <Grid>
                                <StackPanel>
                                    <Button
                                        Style="{StaticResource ContentBlockButtonStyle}"
                                        Margin="0,3,0,0"
                                        Padding="16,12"
                                        Tag="{x:Bind Tag}">
                                        <Grid ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <FontIcon
                                                Grid.Column="0"
                                                Glyph="{x:Bind SubjectStateIconGlyph}"
                                                FontSize="22"
                                                VerticalAlignment="Top"
                                                FontFamily="{StaticResource Octions}"
                                                Foreground="#57ab5a"/>
                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <TextBlock
                                                        Text="{x:Bind SubjectWithOwnerName}"
                                                        Style="{ThemeResource BodyTextBlockStyle}"
                                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"/>
                                                    <TextBlock
                                                        Text="{x:Bind FormattedNotifiedDate}"
                                                        HorizontalAlignment="Right"
                                                        Style="{StaticResource BodyTextBlockStyle}"/>
                                                </Grid>
                                                <StackPanel Grid.Row="1" HorizontalAlignment="Left" Orientation="Horizontal">
                                                    <Border Name="UnreadIndicatorCircle" Margin="0,0,6,0" Height="10" Width="10" CornerRadius="5" Background="#316dca" Visibility="{x:Bind Unread}"/>
                                                    <TextBlock
                                                        Text="{x:Bind SubjectTitle}"
                                                        Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                                </StackPanel>
                                                <StackPanel Grid.Row="2" HorizontalAlignment="Left" Spacing="6" Margin="0,6,0,0" Orientation="Horizontal">
                                                    <Border CornerRadius="8" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="16" Width="16">
                                                        <Image Source="{x:Bind LatestEventUserAvatar}" Height="16" Width="16"/>
                                                    </Border>
                                                    <TextBlock
                                                        Text="{x:Bind FormattedNotifiedReason}"
                                                        Style="{ThemeResource BodyTextBlockStyle}"
                                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </muxc:ItemsRepeater>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
