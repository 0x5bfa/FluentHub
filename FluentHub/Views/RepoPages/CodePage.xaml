<Page
    x:Class="FluentHub.Views.RepoPages.CodePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentHub.Views.RepoPages"
    xmlns:vm="using:FluentHub.ViewModels.RepoPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Page.DataContext>
        <vm:CodePageViewModel x:Name="ViewModel"/>
    </Page.DataContext>

    <ScrollViewer>
        <Grid Margin="18,12" ColumnSpacing="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition x:Name="OverviewColumn" Width="256"/>
            </Grid.ColumnDefinitions>
            <Grid RowSpacing="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Spacing="6" Orientation="Horizontal">
                        <ComboBox PlaceholderText="Branch" Margin="0,0,12,0">
                            <x:String>main</x:String>
                            <x:String>feature/add-tabs</x:String>
                        </ComboBox>
                        <Button Grid.Column="1" FontWeight="Normal" Style="{StaticResource ClearButtonStyle}" Background="Transparent" HorizontalAlignment="Left" Height="24" Padding="4,0">
                            <TextBlock Text="73 branches" Style="{StaticResource BodyTextBlockStyle}" FontWeight="Normal"/>
                        </Button>
                        <Button Grid.Column="1" FontWeight="Normal" Style="{StaticResource ClearButtonStyle}" Background="Transparent" HorizontalAlignment="Left" Height="24" Padding="4,0">
                            <TextBlock Text="300 tags" Style="{StaticResource BodyTextBlockStyle}" FontWeight="Normal"/>
                        </Button>
                    </StackPanel>
                    <StackPanel Grid.Column="2" HorizontalAlignment="Right" Orientation="Horizontal" Spacing="6" VerticalAlignment="Top">
                        <Button Content="Go to file"/>
                        <muxc:DropDownButton Content="Add file">
                            <muxc:DropDownButton.Flyout>
                                <MenuFlyout Placement="Bottom">
                                    <MenuFlyoutItem Icon="Add" Text="Create new file"/>
                                    <MenuFlyoutItem Icon="OpenFile" Text="Upload files"/>
                                </MenuFlyout>
                            </muxc:DropDownButton.Flyout>
                        </muxc:DropDownButton>
                        <muxc:DropDownButton Content="Code" Style="{ThemeResource AccentButtonStyle}">
                            <muxc:DropDownButton.Flyout>
                                <Flyout Placement="BottomEdgeAlignedRight">
                                    <Flyout.FlyoutPresenterStyle>
                                        <Style TargetType="FlyoutPresenter">
                                            <Setter Property="Padding" Value="16,16"/>
                                            <Setter Property="CornerRadius" Value="6"/>
                                        </Style>
                                    </Flyout.FlyoutPresenterStyle>
                                    <StackPanel>
                                        <muxc:NavigationView
                                        Margin="-12,-12,-12,12"
                                        CornerRadius="4"
                                        PaneDisplayMode="Top"
                                        IsBackButtonVisible="Collapsed"
                                        IsSettingsVisible="False">
                                            <muxc:NavigationView.MenuItems>
                                                <muxc:NavigationViewItem Tag="Overview" Content="HTTPS" IsSelected="True"/>
                                                <muxc:NavigationViewItem Tag="Repositories" Content="SSH"/>
                                                <muxc:NavigationViewItem Tag="Repositories" Content="GitHub CLI"/>
                                            </muxc:NavigationView.MenuItems>
                                        </muxc:NavigationView>
                                        <Grid ColumnSpacing="8" RowSpacing="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBox PlaceholderText="Web URL" HorizontalAlignment="Stretch"/>
                                            <Button Grid.Column="1">
                                                <FontIcon Glyph="&#xe8c8;" FontSize="14" Height="18"/>
                                            </Button>
                                            <TextBlock Grid.ColumnSpan="2" Grid.Row="1" Text="Use Git or checkout with SVN using the web URL." Style="{ThemeResource BodyTextBlockStyle}" Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" HorizontalAlignment="Stretch"/>
                                            <StackPanel Grid.ColumnSpan="2" Grid.Row="2" Spacing="8" Margin="0,8,0,0">
                                                <Button HorizontalAlignment="Stretch">
                                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                                        <FontIcon FontFamily="octions" Glyph="&#xE970;" FontSize="14" Height="18"/>
                                                        <TextBlock Text="Open with GitHub Desktop"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button HorizontalAlignment="Stretch">
                                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                                        <FontIcon FontFamily="octions" Glyph="&#xE92E;" FontSize="14" Height="18"/>
                                                        <TextBlock Text="Open with Visual Studio"/>
                                                    </StackPanel>
                                                </Button>
                                                <Button HorizontalAlignment="Stretch" Style="{ThemeResource AccentButtonStyle}">
                                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                                        <FontIcon FontFamily="octions" Glyph="&#xE9A7;" FontSize="14" Height="18"/>
                                                        <TextBlock Text="Download zip"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Flyout>
                            </muxc:DropDownButton.Flyout>
                        </muxc:DropDownButton>
                    </StackPanel>
                    <Button Grid.Column="3" x:Name="OverviewColumnOpenButton" Margin="8,0,0,0" Padding="0" Click="OverviewColumnOpenButton_Click" Height="32" Width="32" Visibility="Collapsed">
                        <FontIcon Glyph="&#xE700;" FontSize="14"/>
                    </Button>
                </Grid>
                <Grid
                    Grid.Row="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    VerticalAlignment="Top" Height="48"
                    Padding="12,0"
                    Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border
                        CornerRadius="12"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        Height="24"
                        Width="24">
                        <Image x:Name="RepoLatestCommitAuthorAvatar"  Height="24" Width="24"/>
                    </Border>
                    <TextBlock Grid.Column="1" x:Name="RepoLatestCommitAuthorName" VerticalAlignment="Center" Margin="12,0,0,0" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock Grid.Column="2" x:Name="RepoLatestCommitMessage" VerticalAlignment="Center" Margin="4,0,0,0" TextWrapping="NoWrap" Style="{StaticResource BodyTextBlockStyle}"/>
                    <TextBlock Grid.Column="4" x:Name="RepoLatestCommitSha" VerticalAlignment="Center" Style="{StaticResource CaptionTextBlockStyle}" FontFamily="consolas" Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"/>
                    <TextBlock Grid.Column="5" x:Name="RepoLatestCommitUpdatedAtHumanized" VerticalAlignment="Center" Margin="4,0,0,0" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"/>
                    <StackPanel Grid.Column="6" Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xE9D3;" FontFamily="{StaticResource Octions}" Margin="12,0,0,0" FontSize="18"/>
                        <TextBlock x:Name="RepoCommitsCount" VerticalAlignment="Center" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        <TextBlock Grid.Column="5" VerticalAlignment="Center" Text="commits" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"/>
                    </StackPanel>
                </Grid>
                <Grid
                    Grid.Row="2"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <ListView
                        x:Name="ListView"
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Stretch"
                        SelectionMode="Single"
                        ItemsSource="{x:Bind ViewModel.Items}">
                        <ListView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                                <Setter Property="MinHeight" Value="40" />
                                <Setter Property="Height" Value="40" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="vm:DetailsLayoutModel">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="120" />
                                    </Grid.ColumnDefinitions>
                                    <FontIcon
                                        x:Name="ItemIcon"
                                        Glyph="{x:Bind ObjectTypeIconGlyph}"
                                        FontFamily="{StaticResource Octions}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="16" />
                                    <TextBlock
                                        Grid.Column="1"
                                        x:Name="ItemNameTextBox"
                                        Text="{x:Bind ObjectName}"
                                        VerticalAlignment="Center"/>
                                    <TextBlock
                                        Grid.Column="2"
                                        x:Name="ItemLatestCommitTitleTextBox"
                                        Text="{x:Bind ObjectLatestCommitMessage}"
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                        VerticalAlignment="Center"
                                        TextTrimming="CharacterEllipsis" />
                                    <TextBlock
                                        Grid.Column="3"
                                        x:Name="ItemUpdatedAtTextBlock"
                                        Text="{x:Bind ObjectUpdatedAtHumanized}"
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
                <Grid
                    x:Name="RepositoryReadmeBlock"
                    Grid.Row="3"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Visibility="Collapsed">
                    <WebView
                        x:Name="RepositoryReadmeWebView"
                        Loaded="RepositoryReadmeWebView_Loaded"
                        DefaultBackgroundColor="Transparent"
                        NavigationStarting="RepositoryReadmeWebView_NavigationStarting"
                        NavigationCompleted="RepositoryReadmeWebView_NavigationCompleted"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Height="Auto" Width="Auto"
                        ScrollViewer.VerticalScrollMode="Disabled"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
                </Grid>
            </Grid>
            <Grid
                Grid.Column="1"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4"
                RowSpacing="4">
                <Button Style="{StaticResource ClearButtonStyle}" Click="OverviewColumnCloseButton_Click" VerticalAlignment="Top" Canvas.ZIndex="1" HorizontalAlignment="Right" Background="Transparent" Height="32" Width="32" Margin="8">
                    <FontIcon Glyph="&#xE711;" FontSize="18"/>
                </Button>
                <ScrollViewer>
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="About" Style="{StaticResource BodyStrongTextBlockStyle}" FontSize="16"/>
                            <TextBlock Grid.Row="1" x:Name="RepoDescription"  Style="{StaticResource BodyTextBlockStyle}" Foreground="{StaticResource ApplicationSecondaryForegroundThemeBrush}"/>
                            <StackPanel Grid.Row="2" Spacing="2" Margin="0,8,0,0">
                                <StackPanel x:Name="OverviewReadmeBlock" Orientation="Horizontal" Spacing="8" Visibility="Collapsed">
                                    <FontIcon
                                        Glyph="&#xE922;"
                                        FontFamily="{StaticResource Octions}"
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                        FontSize="14"
                                        VerticalAlignment="Center"/>
                                    <HyperlinkButton
                                        x:Name="OverviewReadme"
                                        Margin="0,-2,0,0"
                                        Content="Readme"
                                        Padding="4"
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                        VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel x:Name="OverviewLicenseBlock" Orientation="Horizontal" Spacing="8" Visibility="Collapsed">
                                    <FontIcon
                                        Glyph="&#xE9F7;"
                                        FontFamily="{StaticResource Octions}"
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                        FontSize="14"
                                        VerticalAlignment="Center"/>
                                    <HyperlinkButton
                                        x:Name="OverviewLicense"
                                        Padding="4"
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"/>
                                </StackPanel>
                                <StackPanel x:Name="OverviewCodeOfConduct" Orientation="Horizontal" Spacing="8" Visibility="Collapsed">
                                    <FontIcon
                                        Glyph="&#xE93B;"
                                        FontFamily="{StaticResource Octions}"
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                        FontSize="14"
                                        VerticalAlignment="Center"/>
                                    <HyperlinkButton
                                        Padding="4"
                                        Content="Code of conduct"
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"/>
                                </StackPanel>
                                <StackPanel x:Name="OverviewStargazersCountBlock" Orientation="Horizontal" Spacing="8">
                                    <FontIcon
                                        Glyph="&#xEA94;"
                                        FontFamily="{StaticResource Octions}"
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                        FontSize="14"
                                        VerticalAlignment="Center"/>
                                    <HyperlinkButton
                                        x:Name="OverviewStargazersCount"
                                        Padding="4"
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"/>
                                </StackPanel>
                                <StackPanel x:Name="OverviewWatchingCountBlock" Orientation="Horizontal" Spacing="8">
                                    <FontIcon
                                        Glyph="&#xE98B;"
                                        FontFamily="{StaticResource Octions}"
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                        FontSize="14"
                                        VerticalAlignment="Center"/>
                                    <HyperlinkButton
                                        x:Name="OverviewWatchingCount"
                                        Padding="4"
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"/>
                                </StackPanel>
                                <StackPanel x:Name="OverviewForksCountBlock" Orientation="Horizontal" Spacing="8">
                                    <FontIcon
                                        Glyph="&#xEA55;"
                                        FontFamily="{StaticResource Octions}"
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                        FontSize="14"
                                        VerticalAlignment="Center"/>
                                    <HyperlinkButton
                                        x:Name="OverviewForksCount"
                                        Padding="4"
                                        Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"/>
                                </StackPanel>
                            </StackPanel>
                            <MenuFlyoutSeparator Grid.Row="3" Margin="-16,12"/>
                        </Grid>
                        <Grid Grid.Row="1" RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Release" Style="{StaticResource BodyStrongTextBlockStyle}" FontSize="16"/>
                            <StackPanel x:Name="LatestReleaseBlock" Grid.Row="1" Spacing="2" Visibility="Collapsed">
                                <Button HorizontalAlignment="Stretch" Height="64" Background="Transparent" BorderBrush="Transparent"/>
                            </StackPanel>
                            <StackPanel x:Name="ReleaseNotFoundBlock" Grid.Row="1" Spacing="2">
                                <TextBlock Text="No releases published" Style="{StaticResource CaptionTextBlockStyle}"/>
                                <TextBlock Text="Create a new release" Style="{StaticResource CaptionTextBlockStyle}"/>
                            </StackPanel>
                            <MenuFlyoutSeparator Grid.Row="3" Margin="-16,12"/>
                        </Grid>
                        <Grid Grid.Row="2" RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="Contoributors" Style="{StaticResource BodyStrongTextBlockStyle}" FontSize="16" VerticalAlignment="Center"/>
                                <muxc:InfoBadge x:Name="ContoributorsCountBadge" Value="2"/>
                            </StackPanel>
                            <StackPanel x:Name="ContributrsBlock" Grid.Row="1" Spacing="2" Visibility="Collapsed">
                            </StackPanel>
                            <MenuFlyoutSeparator Grid.Row="3" Margin="-16,12"/>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
