<Page
    x:Class="FluentHub.Views.RepoPages.CodePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentHub.Views.RepoPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:uc="using:FluentHub.UserControls"
    xmlns:vm="using:FluentHub.ViewModels.RepoPages"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:CodePageViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid Margin="18,18,18,12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition x:Name="OverviewColumn" Width="256" />
        </Grid.ColumnDefinitions>
        <ScrollViewer Padding="0,0,12,0">
            <uc:RepositoryTreeContentBlock x:Name="RepoContentsContentBlock" />
        </ScrollViewer>
        <Grid
            Grid.Column="1"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="4"
            RowSpacing="4">
            <Button
                Width="32"
                Height="32"
                Margin="8"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="Transparent"
                Canvas.ZIndex="1"
                Style="{StaticResource ClearButtonStyle}">
                <FontIcon FontSize="18" Glyph="&#xE711;" />
            </Button>
            <ScrollViewer>
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            FontSize="16"
                            Style="{StaticResource BodyStrongTextBlockStyle}"
                            Text="About" />
                        <TextBlock
                            x:Name="RepoDescription"
                            Grid.Row="1"
                            Foreground="{StaticResource ApplicationSecondaryForegroundThemeBrush}"
                            Style="{StaticResource BodyTextBlockStyle}" />
                        <StackPanel Grid.Row="2" Margin="0,6,0,0">
                            <StackPanel
                                x:Name="OverviewReadmeBlock"
                                Margin="0,3"
                                Visibility="Collapsed">
                                <Button
                                    x:Name="OverviewReadme"
                                    Padding="4"
                                    VerticalAlignment="Center"
                                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                    Style="{StaticResource LinkLikeButtonStyle}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon
                                            VerticalAlignment="Center"
                                            FontFamily="{StaticResource Octions}"
                                            FontSize="14"
                                            Glyph="&#xE922;" />
                                        <TextBlock Text="README" />
                                    </StackPanel>
                                </Button>
                                <Button />
                            </StackPanel>
                            <StackPanel
                                x:Name="OverviewLicenseBlock"
                                Margin="0,3"
                                Visibility="Collapsed">
                                <Button Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" Style="{StaticResource LinkLikeButtonStyle}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon
                                            VerticalAlignment="Center"
                                            FontFamily="{StaticResource Octions}"
                                            FontSize="14"
                                            Glyph="&#xE9F7;" />
                                        <TextBlock x:Name="LicenseName" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <StackPanel
                                x:Name="OverviewCodeOfConduct"
                                Margin="0,3"
                                Visibility="Collapsed">
                                <Button Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" Style="{StaticResource LinkLikeButtonStyle}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon
                                            VerticalAlignment="Center"
                                            FontFamily="{StaticResource Octions}"
                                            FontSize="14"
                                            Glyph="&#xE93B;" />
                                        <TextBlock Text="Code of conduct" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <StackPanel x:Name="OverviewStarsCountBlock" Margin="0,3">
                                <Button Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" Style="{StaticResource LinkLikeButtonStyle}">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <FontIcon
                                            Margin="0,0,2,0"
                                            VerticalAlignment="Center"
                                            FontFamily="{StaticResource Octions}"
                                            FontSize="14"
                                            Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                            Glyph="&#xEA94;" />
                                        <TextBlock x:Name="StarsCountTextBlock" FontWeight="SemiBold" />
                                        <TextBlock Text="Stars" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <StackPanel x:Name="OverviewWatchingCountBlock" Margin="0,3">
                                <Button Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" Style="{StaticResource LinkLikeButtonStyle}">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <FontIcon
                                            Margin="0,0,2,0"
                                            VerticalAlignment="Center"
                                            FontFamily="{StaticResource Octions}"
                                            FontSize="14"
                                            Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                            Glyph="&#xE98B;" />
                                        <TextBlock x:Name="WatchingCountTextBlock" FontWeight="SemiBold" />
                                        <TextBlock Text="Watching" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <StackPanel x:Name="OverviewForksCountBlock" Margin="0,3">
                                <Button Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" Style="{StaticResource LinkLikeButtonStyle}">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <FontIcon
                                            Margin="0,0,2,0"
                                            VerticalAlignment="Center"
                                            FontFamily="{StaticResource Octions}"
                                            FontSize="14"
                                            Glyph="&#xEA55;" />
                                        <TextBlock x:Name="ForksCountTextBlock" FontWeight="SemiBold" />
                                        <TextBlock Text="Forks" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <MenuFlyoutSeparator Grid.Row="3" Margin="-16,12" />
                    </Grid>
                    <Grid Grid.Row="1" RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            FontSize="16"
                            Style="{StaticResource BodyStrongTextBlockStyle}"
                            Text="Release" />
                        <StackPanel
                            x:Name="LatestReleaseBlock"
                            Grid.Row="1"
                            Spacing="2"
                            Visibility="Collapsed">
                            <Button
                                Height="64"
                                HorizontalAlignment="Stretch"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Visibility="Collapsed" />
                        </StackPanel>
                        <StackPanel
                            x:Name="ReleaseNotFoundBlock"
                            Grid.Row="1"
                            Spacing="2">
                            <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Text="No releases published" />
                            <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Text="Create a new release" />
                        </StackPanel>
                        <MenuFlyoutSeparator Grid.Row="3" Margin="-16,12" />
                    </Grid>
                    <Grid Grid.Row="2" RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="16"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Contoributors" />
                            <muxc:InfoBadge
                                x:Name="ContoributorsCountBadge"
                                VerticalAlignment="Center"
                                Value="0" />
                        </StackPanel>
                        <StackPanel
                            x:Name="ContributrsBlock"
                            Grid.Row="1"
                            Spacing="2"
                            Visibility="Collapsed" />
                        <MenuFlyoutSeparator Grid.Row="3" Margin="-16,12" />
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
