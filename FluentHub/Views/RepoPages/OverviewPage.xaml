<Page
    x:Class="FluentHub.Views.RepoPages.OverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:FluentHub.Helpers"
    xmlns:local="using:FluentHub.Views.RepoPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <Thickness x:Key="NavigationViewTopPaneHeight">40</Thickness>
                    <Style
                        x:Key="ButtonSettingsBlockStyle"
                        BasedOn="{StaticResource DefaultButtonStyle}"
                        TargetType="Button">
                        <Setter Property="Background" Value="{ThemeResource ExpanderHeaderBackground}" />
                        <Setter Property="BorderBrush" Value="{ThemeResource ExpanderHeaderBorderBrush}" />
                        <Setter Property="BorderThickness" Value="{ThemeResource ExpanderHeaderBorderThickness}" />
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Padding" Value="{StaticResource ExpanderContentPadding}" />
                        <Setter Property="MinHeight" Value="{StaticResource ExpanderMinHeight}" />
                        <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Margin="20,20,20,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <Button
                    Grid.Column="1"
                    Padding="2,0"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    Click="OwnerButton_Click"
                    FontWeight="Normal"
                    Style="{StaticResource LinkLikeButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Border
                            Width="26"
                            Height="26"
                            Background="{ThemeResource ExpanderHeaderBackground}"
                            BorderBrush="{ThemeResource ExpanderHeaderBorderBrush}"
                            BorderThickness="0.5"
                            CornerRadius="8">
                            <Image
                                x:Name="RepoOwnerAvatar"
                                Width="26"
                                Height="24" />
                        </Border>
                        <TextBlock
                            x:Name="RepoOwnerName"
                            FontWeight="Normal"
                            Style="{StaticResource SubtitleTextBlockStyle}"
                            Text="fluenthub-uwp" />
                    </StackPanel>
                </Button>
                <TextBlock
                    Margin="4,0"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="/" />
                <Button
                    Grid.Column="3"
                    Padding="2,0"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    FontWeight="Normal"
                    Style="{StaticResource LinkLikeButtonStyle}">
                    <TextBlock
                        x:Name="RepoName"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="FluentHub" />
                </Button>
            </StackPanel>
            <StackPanel
                Grid.Column="5"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Spacing="6">
                <muxc:DropDownButton x:Name="RepoWatchCombbox" Grid.Column="2">
                    <muxc:DropDownButton.Flyout>
                        <MenuFlyout Placement="BottomEdgeAlignedLeft">
                            <muxc:RadioMenuFlyoutItem IsChecked="True" Text="Participating and @mentions" />
                            <muxc:RadioMenuFlyoutItem IsChecked="True" Text="All activity" />
                            <muxc:RadioMenuFlyoutItem IsChecked="True" Text="Ignore" />
                            <muxc:RadioMenuFlyoutItem IsChecked="True" Text="Custom" />
                        </MenuFlyout>
                    </muxc:DropDownButton.Flyout>
                    <muxc:DropDownButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon
                                FontFamily="{StaticResource Octions}"
                                FontSize="14"
                                Glyph="&#xE98B;" />
                            <TextBlock x:Name="RepoWatchCombboxWatchTextBlock" Text="{helpers:ResourceString Name=RepoWatchCombboxWatch}" />
                            <muxc:InfoBadge x:Name="WatchersCountBadge" Value="0" />
                        </StackPanel>
                    </muxc:DropDownButton.Content>
                </muxc:DropDownButton>
                <Button Grid.Column="3">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon
                                FontFamily="{StaticResource Octions}"
                                FontSize="14"
                                Glyph="&#xea55;" />
                            <TextBlock x:Uid="RepoForkButtonTextBlock" />
                            <muxc:InfoBadge x:Name="ForksCountBadge" Value="0" />
                        </StackPanel>
                    </Button.Content>
                </Button>
                <muxc:SplitButton Grid.Column="4">
                    <muxc:SplitButton.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="14" Glyph="&#xE734;" />
                            <TextBlock x:Uid="RepoStarSplitButtonTextBlock" />
                            <muxc:InfoBadge x:Name="StargazersCountBadge" Value="0" />
                        </StackPanel>
                    </muxc:SplitButton.Content>
                </muxc:SplitButton>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <muxc:NavigationView
                x:Name="RepoPageNavView"
                Margin="10,0"
                IsBackButtonVisible="Collapsed"
                IsSettingsVisible="False"
                ItemInvoked="RepoPageNavView_ItemInvoked"
                PaneDisplayMode="Top">
                <muxc:NavigationView.MenuItems>
                    <muxc:NavigationViewItem
                        x:Uid="RepoPageNavViewItemCode"
                        Content="Code"
                        IsSelected="True"
                        Tag="Code">
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon
                                FontFamily="{StaticResource Octions}"
                                FontSize="16"
                                Glyph="&#xE94b;" />
                        </muxc:NavigationViewItem.Icon>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem Tag="Issues">
                        <muxc:NavigationViewItem.Content>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon
                                    Margin="0,0,8,0"
                                    FontFamily="{StaticResource Octions}"
                                    FontSize="16"
                                    Glyph="&#xE9EA;" />
                                <TextBlock Text="{helpers:ResourceString Name=Issues}" />
                                <muxc:InfoBadge
                                    x:Name="IssuesCountBadge"
                                    Margin="8,0,0,0"
                                    Visibility="Collapsed" />
                            </StackPanel>
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem Tag="PRs">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon
                                Margin="0,0,8,0"
                                FontFamily="{StaticResource Octions}"
                                FontSize="16"
                                Glyph="&#xE9BF;" />
                            <TextBlock Text="{helpers:ResourceString Name=PullRequests}" />
                            <muxc:InfoBadge
                                x:Name="PullsCountBadge"
                                Margin="8,0,0,0"
                                Visibility="Collapsed" />
                        </StackPanel>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem x:Uid="RepoPageNavViewItemSettings" Tag="Settings">
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon
                                FontFamily="{StaticResource Octions}"
                                FontSize="16"
                                Glyph="&#xE9B3;" />
                        </muxc:NavigationViewItem.Icon>
                    </muxc:NavigationViewItem>
                </muxc:NavigationView.MenuItems>
                <muxc:NavigationView.Content>
                    <Frame
                        x:Name="RepoPageNavViewFrame"
                        Margin="-12,0"
                        Background="{ThemeResource LayerFillColorDefaultBrush}" />
                </muxc:NavigationView.Content>
            </muxc:NavigationView>
        </Grid>
    </Grid>
</Page>
